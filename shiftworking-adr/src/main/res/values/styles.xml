<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sw_text_footer_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="sw_button_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sw_button_prev</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="sw_button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sw_button_next</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="sw_common_data" parent="@style/wl_common_text">
        <item name="android:textColor">@color/sw_data_text_color</item>
    </style>

    <style name="TextViewStyleHeaderButtonBlue">
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cs_work_text_value_comment">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="cs_work_edit_text_value">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="cs_work_text_number">
        <item name="android:layout_width">@dimen/margin_20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!--<item name="android:background">@drawable/customcheckbox_background</item>-->
        <item name="android:textColor">@color/core_silver</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="sw_right_hand_arrow_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_6dp</item>
        <item name="android:src">@drawable/wf_row_arrow_right</item>
    </style>

    <style name="sw_text_14sp">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

