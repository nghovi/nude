<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sw_text_footer_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="sw_button_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sw_button_prev</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="sw_button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sw_button_next</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="sw_common_data" parent="@style/wl_common_text">
        <item name="android:textColor">@color/sw_data_text_color</item>
    </style>

    <style name="TextViewStyleHeaderButtonBlue">
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
