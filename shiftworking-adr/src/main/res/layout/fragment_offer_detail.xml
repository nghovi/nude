<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custome="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/chiase_white"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="0dp">

    <include layout="@layout/view_common_header"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@drawable/shape_gray_border"
                android:orientation="vertical"
                android:padding="@dimen/margin_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/cs_work_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8dp"
                            android:ellipsize="none"
                            android:text="@string/fragment_offer_edit_user_name"/>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_username"
                            style="@style/cs_work_text_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/cs_work_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Offer Type"/>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_offer_type"
                            style="@style/cs_work_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/cs_work_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status"/>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_status"
                            style="@style/cs_work_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnr_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/cs_work_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Start Date"/>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_start_date"
                            style="@style/cs_work_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnr_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/cs_work_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="End Date"/>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_end_date"
                            style="@style/cs_work_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/cs_common_divider"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"/>

                <TextView
                    android:id="@+id/textView4"
                    style="@style/cs_work_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason"/>

                <TextView
                    android:id="@+id/txt_fragment_offer_detail_reason"
                    style="@style/cs_work_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:singleLine="false"
                    />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/cs_work_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="Memo"/>

                <TextView
                    android:id="@+id/txt_fragment_offer_detail_memo"
                    style="@style/cs_work_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"/>

                <View
                    style="@style/cs_common_divider"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView21"
                                style="@style/cs_work_text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Approve1"/>

                            <TextView
                                android:id="@+id/txt_fragment_offer_detail_approve1"
                                style="@style/cs_work_text_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_approve1_comment"
                            style="@style/cs_work_text_value_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/cs_work_text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Approve2"/>

                            <TextView
                                android:id="@+id/txt_fragment_offer_detail_approve2"
                                style="@style/cs_work_text_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_fragment_offer_detail_approve2_comment"
                            style="@style/cs_work_text_value_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/edt_fragment_offer_detail_comment"
                style="@style/cs_work_edit_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_20dp"
                android:hint="@string/fragment_offer_detail_comment_hint"
                android:maxLines="2"
                android:minHeight="2dp"
                android:singleLine="false"
                android:visibility="visible"
                custome:mName="password"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnr_fragment_offer_detail_approve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_fragment_offer_detail_approve"
                        style="@style/wl_common_button_60"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="@dimen/margin_60dp"
                        android:layout_marginRight="30dp"
                        android:text="Approve"/>

                    <Spinner
                        android:id="@+id/spn_fragment_offer_detail_approve_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
