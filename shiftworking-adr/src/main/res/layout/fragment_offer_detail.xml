<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custome="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/chiase_white"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="0dp">

    <include layout="@layout/view_common_header"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:background="@color/wf_login_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_16dp"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_16dp"
            >


            <TextView
                style="@style/sf_text_value_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:text="@string/fragment_offer_detail_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sf_text_title"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="wrap_content"
                        android:text="Offer Type"/>

                    <TextView
                        android:id="@+id/txt_fragment_offer_detail_offer_type"
                        style="@style/sf_text_value_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sf_text_title"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_offer_detail_start_date"/>

                    <TextView
                        android:id="@+id/txt_fragment_offer_detail_start_date"
                        style="@style/sf_text_value_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sf_text_title"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_offer_detail_start_time"/>

                    <TextView
                        android:id="@+id/txt_fragment_offer_detail_start_time"
                        style="@style/sf_text_value_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sf_text_title"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_offer_detail_end_date"/>

                    <TextView
                        android:id="@+id/txt_fragment_offer_detail_end_date"
                        style="@style/sf_text_value_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sf_text_title"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_offer_detail_end_time"/>

                    <TextView
                        android:id="@+id/txt_fragment_offer_detail_end_time"
                        style="@style/sf_text_value_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/sf_text_title"
                        android:layout_width="@dimen/margin_150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_offer_detail_note"/>

                    <TextView
                        android:id="@+id/txt_fragment_offer_detail_note"
                        style="@style/sf_text_value_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:singleLine="false"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_fragment_offer_detail_approve_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/sf_text_value_black_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:text="@string/fragment_offer_detail_approve_history"/>

                <trente.asia.android.view.ChiaseListViewNoScroll
                    android:id="@+id/lst_fragment_offer_detail_approve_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </trente.asia.android.view.ChiaseListViewNoScroll>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_fragment_offer_detail_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/sf_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/fragment_offer_detail_approve_comment"/>

                <EditText
                    android:id="@+id/edt_fragment_offer_detail_comment"
                    style="@style/sf_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/fragment_offer_detail_comment_hint"
                    android:maxLines="2"
                    android:minHeight="2dp"
                    android:singleLine="false"
                    android:visibility="visible"
                    custome:mName="password"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wf_login_background_color"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_offer_detail_reject"
                style="@style/wl_common_button_small"
                android:layout_marginRight="@dimen/margin_30dp"
                android:text="Reject"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_fragment_offer_detail_approve"
                style="@style/wl_common_button_small"
                android:layout_marginLeft="@dimen/margin_30dp"
                android:text="Approve"
                android:visibility="gone"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_fragment_offer_detail_delete"
            style="@style/wl_common_button_60"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Delete"
            android:visibility="gone"/>
    </LinearLayout>

    <include layout="@layout/view_common_footer"/>


</LinearLayout>
