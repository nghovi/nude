<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/cs_common_match_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/state_common_selectable_row"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_10dp"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp"
    android:paddingTop="@dimen/margin_10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp">

        <ImageView
            android:id="@+id/img_id_transit_type"
            style="@style/cs_common_wrap"
            android:src="@drawable/sw_icon_other"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/img_id_way_type"
            style="@style/cs_common_wrap"
            android:layout_marginTop="@dimen/margin_18dp"
            android:src="@drawable/sw_icon_way1"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_leave"
            style="@style/wl_common_text_single_line"/>

        <TextView
            android:id="@+id/txt_id_arrive"
            style="@style/wl_common_text_single_line"
            android:layout_marginTop="@dimen/margin_6dp"/>


        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_6dp">

            <TextView
                android:id="@+id/txt_id_transit_date"
                style="@style/wl_common_text_single_line"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_id_fee"
                style="@style/wl_common_text_single_line"
                android:layout_width="wrap_content"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        style="@style/cs_common_wrap"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:src="@drawable/wf_row_arrow_right"/>

</LinearLayout>