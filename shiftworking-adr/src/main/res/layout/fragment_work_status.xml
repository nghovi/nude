<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        style="@style/cs_common_match"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            style="@style/wf_common_linear">

            <trente.asia.shiftworking.services.worktime.view.SegmentedButton
                android:id="@+id/seg_id_work"
                style="@style/cs_common_match_wrap"
                android:layout_height="@dimen/margin_35dp"
                custom:btnPaddingBottom="@dimen/margin_0dp"
                custom:btnPaddingTop="@dimen/margin_0dp"
                custom:cornerRadius="@dimen/margin_5dp"
                custom:gradientColorOffEnd="@color/wf_app_color_base"
                custom:gradientColorOffStart="@color/wf_app_color_base"
                custom:gradientColorOnEnd="@color/wf_app_color_base_50"
                custom:gradientColorOnStart="@color/wf_app_color_base_50"
                custom:gradientColorSelectedEnd="@color/cs_common_selectable_color"
                custom:gradientColorSelectedStart="@color/cs_common_selectable_color"
                custom:strokeColor="@color/wf_app_color_base"
                custom:strokeWidth="@dimen/margin_0dp"
                custom:textStyle="@style/TextViewStyleHeaderButtonBlue"/>

            <include layout="@layout/view_common_shift_working_month"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_id_work"
            style="@style/cs_common_match"
            android:layout_weight="1"/>

    </LinearLayout>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>
