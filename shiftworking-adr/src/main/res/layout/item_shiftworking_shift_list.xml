<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/chiase_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingLeft="@dimen/margin_16dp"
              android:paddingRight="@dimen/margin_16dp"
              android:paddingTop="@dimen/margin_10dp">

    <LinearLayout
        style="@style/cs_common_wrap"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_work_date"
            style="@style/wl_common_text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_id_location"
            style="@style/wl_common_text"
            android:layout_marginTop="@dimen/margin_6dp"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        style="@style/cs_common_wrap"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_work_shift"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:textColor="@color/wf_common_color_hint"/>

        <TextView
            android:id="@+id/txt_id_check_in"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"/>

        <TextView
            android:id="@+id/txt_id_work_time"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:textStyle="italic"/>
    </LinearLayout>

</LinearLayout>