<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@color/wf_app_color_base"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp">

        <ImageView
            android:id="@+id/img_id_header_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:minWidth="@dimen/margin_25dp"
            android:src="@drawable/wf_back_white"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:src="@drawable/wf_back_white"
            android:visibility="invisible"/>

        <LinearLayout
            style="@style/cs_common_wrap"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/txt_id_header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/chiase_white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <RelativeLayout
            style="@style/cs_common_wrap">

            <LinearLayout
                android:id="@+id/lnr_id_header_right_sub_icon"
                style="@style/cs_common_wrap">

                <ImageView
                    android:id="@+id/img_id_header_right_sub_icon"
                    style="@style/cs_common_wrap"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:src="@drawable/sw_icon_action_transit"
                    android:visibility="invisible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_id_unread_transit"
                style="@style/wl_common_text"
                android:layout_width="@dimen/margin_18dp"
                android:layout_height="@dimen/margin_18dp"
                android:layout_alignRight="@+id/lnr_id_header_right_sub_icon"
                android:layout_alignTop="@+id/lnr_id_header_right_sub_icon"
                android:background="@drawable/cs_notification"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/chiase_white"
                android:textSize="@dimen/margin_10dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/cs_common_wrap">

            <LinearLayout
                android:id="@+id/lnr_id_header_right_icon"
                style="@style/cs_common_wrap">

                <ImageView
                    android:id="@+id/img_id_header_right_icon"
                    style="@style/cs_common_wrap"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:src="@drawable/sw_icon_action_notice"
                    android:visibility="invisible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_id_unread_notice_send"
                style="@style/wl_common_text"
                android:layout_width="@dimen/margin_18dp"
                android:layout_height="@dimen/margin_18dp"
                android:layout_alignRight="@+id/lnr_id_header_right_icon"
                android:layout_alignTop="@+id/lnr_id_header_right_icon"
                android:background="@drawable/cs_notification"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/chiase_white"
                android:textSize="@dimen/margin_10dp"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>
</merge>

