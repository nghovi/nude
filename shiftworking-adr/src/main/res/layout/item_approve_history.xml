<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/chiase_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingLeft="@dimen/margin_16dp"
              android:paddingRight="@dimen/margin_16dp"
              android:paddingTop="@dimen/margin_10dp">

    <LinearLayout
        android:id="@+id/lnr_item_approve_history_main"
        style="@style/cs_common_match_wrap"
        android:orientation="vertical">

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_approve_history_username"
                style="@style/wl_common_text"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_item_approve_history_time"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_item_approve_history_status"
                style="@style/wl_common_text"
                android:layout_width="match_parent"
                android:gravity="end"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
