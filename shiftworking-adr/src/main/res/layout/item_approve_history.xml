<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@color/chiase_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingLeft="@dimen/margin_16dp"
              android:paddingRight="@dimen/margin_16dp"
              android:paddingTop="@dimen/margin_10dp">


    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_item_approve_history_avatar"
        android:layout_width="@dimen/margin_32dp"
        android:layout_height="@dimen/margin_32dp"
        android:scaleType="fitXY"
        custom:sriv_oval="true"/>

    <LinearLayout
        android:id="@+id/lnr_item_approve_history_main"
        style="@style/cs_common_match_wrap"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_approve_history_username"
                style="@style/wl_common_text"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_item_approve_history_status"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textColor="@color/sw_data_text_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_item_approve_history_comment"
            style="@style/wl_common_text"
            android:layout_marginTop="@dimen/margin_6dp"/>

    </LinearLayout>

</LinearLayout>
