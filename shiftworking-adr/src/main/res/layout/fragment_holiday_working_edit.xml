<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        style="@style/wf_common_match">

        <include layout="@layout/view_common_header" />

        <ScrollView
            style="@style/cs_common_match"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/lnr_id_content"
                style="@style/cs_common_match"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_16dp"
                android:paddingTop="@dimen/margin_16dp"
                android:visibility="invisible">

                <TextView
                    style="@style/wl_common_text"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:paddingRight="@dimen/margin_16dp"
                    android:text="@string/fragment_holiday_working_detail_header" />

                <View style="@style/cs_common_divider" />

                <LinearLayout
                    android:id="@+id/lnr_user"
                    style="@style/wf_common_item_linear2">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="wrap_content"
                        android:text="@string/fragment_offer_edit_offer_user" />

                    <trente.asia.android.view.ChiaseTextView
                        android:id="@+id/txt_fragment_holiday_working_detail_offer_user"
                        style="@style/wl_common_edit_text2"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_weight="1"
                        custom:mName="offerUser" />

                    <ImageView
                        android:id="@+id/arrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wf_row_arrow_right"
                        android:visibility="gone" />
                </LinearLayout>

                <View style="@style/cs_common_divider" />

                <LinearLayout
                    android:id="@+id/lnr_start_date"
                    style="@style/wf_common_item_linear2">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="wrap_content"
                        android:text="@string/fragment_holiday_working_detail_expected_date" />

                    <trente.asia.android.view.ChiaseTextView
                        android:id="@+id/txt_fragment_holiday_working_detail_start_date"
                        style="@style/wl_common_edit_text2"
                        android:layout_marginStart="@dimen/margin_10dp"
                        custom:mName="startDateString" />
                </LinearLayout>

                <View style="@style/cs_common_divider" />

                <LinearLayout
                    style="@style/cs_common_match"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="wrap_content"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="@dimen/margin_16dp"
                        android:paddingRight="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_10dp"
                        android:text="@string/fragment_overtime_detail_reason" />

                    <View style="@style/cs_common_divider" />

                    <LinearLayout style="@style/wf_common_item_linear2">

                        <trente.asia.android.view.ChiaseEditText
                            android:id="@+id/txt_fragment_holiday_working_detail_reason"
                            style="@style/wl_common_text"
                            android:background="@android:color/transparent"
                            android:gravity="top|left"
                            android:maxLines="5"
                            android:minLines="5"
                            custom:mName="note" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/cs_common_divider" />

                <LinearLayout
                    android:id="@+id/lnr_fragment_holiday_working_detail_offer_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/wl_common_text"
                        android:paddingLeft="@dimen/margin_16dp"
                        android:paddingRight="@dimen/margin_16dp"
                        android:text="@string/fragment_offer_detail_offer_status" />

                    <trente.asia.android.view.ChiaseListViewNoScroll
                        android:id="@+id/lst_fragment_offer_detail_offer_status"
                        style="@style/cs_common_match_wrap"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:divider="@color/cs_common_divider"
                        android:dividerHeight="1px" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!--<include layout="@layout/view_common_footer"/>-->


    </LinearLayout>
</layout>