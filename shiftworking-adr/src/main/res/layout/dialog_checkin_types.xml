<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginBottom="@dimen/margin_50dp"
              android:layout_marginLeft="@dimen/margin_20dp"
              android:layout_marginRight="@dimen/margin_20dp"
              android:layout_marginTop="@dimen/margin_50dp"
              android:background="@drawable/shape_normal_transparent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_2dp">

    <TextView
        android:id="@+id/txt_title"
        style="@style/cs_common_match_wrap"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_10dp"
        android:textColor="#888888"
        android:textSize="@dimen/margin_16dp"/>


    <LinearLayout
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_dialog_checkin_types_time"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_dialog_checkin_types_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/chiase_black"
        android:text="@string/txt_dialog_checkin_types_guide" />

    <ListView
        android:id="@+id/lst_values_select"
        style="@style/cs_common_match_wrap"
        android:choiceMode="singleChoice"
        android:divider="@null"/>
</LinearLayout>
