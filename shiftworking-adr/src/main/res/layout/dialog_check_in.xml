<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_normal_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_id_msg"
        style="@style/cs_common_match_wrap"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="32dp"
        android:text="@string/sw_work_time_modify_request_title"
        android:textSize="16dp"/>

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_id_delete"
            style="@style/cs_common_wrap"
            android:layout_width="@dimen/margin_0dp"
            android:layout_weight="1"
            android:background="@drawable/state_common_selectable_row"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/chiase_common_delete"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_id_notify"
            style="@style/cs_common_wrap"
            android:layout_width="@dimen/margin_0dp"
            android:layout_weight="1"
            android:background="@drawable/state_common_selectable_row"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/chiase_common_modify"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>