<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingTop="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_id_avatar"
        android:layout_width="@dimen/margin_30dp"
        android:layout_height="@dimen/margin_30dp"
        android:scaleType="fitXY"
        android:src="@drawable/wf_profile"
        custom:sriv_oval="true"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_user_name"
            style="@style/wl_common_text"/>

        <TextView
            android:id="@+id/txt_id_check_time"
            style="@style/wl_common_text"
            android:layout_marginTop="@dimen/margin_6dp"/>

    </LinearLayout>
</LinearLayout>