<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        android:id="@+id/lnr_id_content"
        style="@style/cs_common_match"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            style="@style/wf_common_linear"
            android:paddingBottom="@dimen/margin_0dp"
            android:paddingTop="@dimen/margin_6dp">

            <include layout="@layout/view_common_shift_working_month"/>

        </LinearLayout>

        <ListView
            android:id="@+id/lsv_id_shift_working"
            style="@style/cs_common_match"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_weight="1"
            android:divider="@color/cs_common_divider"
            android:dividerHeight="1px"/>

    </LinearLayout>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>
