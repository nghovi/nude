<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        android:id="@+id/lnr_id_content"
        style="@style/cs_common_match"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            style="@style/wf_common_linear"
            android:paddingBottom="@dimen/margin_0dp"
            android:paddingTop="@dimen/margin_6dp">

            <include layout="@layout/view_common_shift_working_month"/>

            <LinearLayout
                style="@style/cs_common_match_wrap"
                android:layout_marginTop="@dimen/margin_10dp">

                <LinearLayout
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="@dimen/margin_70dp"
                        android:text="@string/sw_shift_work_item_status"/>

                    <TextView
                        style="@style/sw_common_data"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="@dimen/margin_70dp"
                        android:text="@string/sw_shift_work_item_night_time"/>

                    <TextView
                        android:id="@+id/txt_id_night_time"
                        style="@style/sw_common_data"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/cs_common_match_wrap"
                android:layout_marginTop="@dimen/margin_10dp">

                <LinearLayout
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="@dimen/margin_70dp"
                        android:text="@string/sw_shift_work_item_over_time"/>

                    <TextView
                        android:id="@+id/txt_id_over_time"
                        style="@style/sw_common_data"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/wl_common_text"
                        android:layout_width="@dimen/margin_70dp"
                        android:text="@string/sw_shift_work_item_total"/>

                    <TextView
                        android:id="@+id/txt_id_total"
                        style="@style/sw_common_data"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/wl_common_text"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/sw_shift_work_history"
                android:textStyle="bold"/>

        </LinearLayout>

        <ListView
            android:id="@+id/lsv_id_shift_working"
            style="@style/cs_common_match"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_weight="1"
            android:divider="@color/cs_common_divider"
            android:dividerHeight="1px"/>

    </LinearLayout>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>
