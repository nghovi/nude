<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/view_common_header"/>


    <LinearLayout
        android:id="@+id/lnr_id_content"
        style="@style/cs_common_match"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingLeft="@dimen/wf_margin_16"
        android:paddingRight="@dimen/wf_margin_16">

        <include layout="@layout/view_common_shift_working_month"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                style="@style/sf_text_value_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sw_work_offer_history"
                />

            <ListView
                android:id="@+id/lst_work_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                style="@style/sf_text_value_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/sw_work_offer_other_history"
                android:id="@+id/textView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_work_offer_filter_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/wf_background_gray_border_white_padding"
                    android:text="@string/fragment_offer_filter_other_history_filter"
                    android:layout_marginRight="@dimen/margin_6dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/img_fragment_work_offer_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_collection"/>
            </LinearLayout>

            <ListView
                android:id="@+id/lst_fragment_work_offer_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>