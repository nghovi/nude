<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/state_common_selectable_row"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingLeft="@dimen/margin_16dp"
              android:paddingRight="@dimen/margin_16dp"
              android:paddingTop="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_item_offer_avatar"
        android:layout_width="@dimen/margin_32dp"
        android:layout_height="@dimen/margin_32dp"
        android:scaleType="fitXY"
        custom:sriv_oval="true"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_offer_username"
                style="@style/wl_common_text_single_line"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_item_offer_date"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:layout_marginTop="@dimen/margin_6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_offer_type"
                style="@style/wl_common_text_single_line"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_item_offer_status"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
