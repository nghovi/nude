<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:gravity="center_vertical"

              android:weightSum="1">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/margin_4dp"
                  android:layout_marginTop="@dimen/margin_4dp"
                  android:gravity="center_vertical"
                  android:layout_weight="0.6">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_item_birthday_user"
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:src="@drawable/cl_icon_holiday"
            android:scaleType="fitXY"
            custom:sriv_oval="true"/>

        <TextView
            style="@style/wl_common_text"
            android:gravity="center_vertical"
            android:textColor="@color/cl_circle_bg_holiday"
            android:text="@string/daily_page_all_day"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_weight="0.4">
        <TextView
            android:id="@+id/txt_item_holiday_name"
            style="@style/wl_common_text"
            android:textColor="@color/cl_circle_bg_holiday"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="@string/happy_birthday"/>
    </LinearLayout>

</LinearLayout>
