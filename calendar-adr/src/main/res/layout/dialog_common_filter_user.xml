<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginBottom="@dimen/margin_50dp"
              android:layout_marginLeft="@dimen/margin_20dp"
              android:layout_marginRight="@dimen/margin_20dp"
              android:layout_marginTop="@dimen/margin_50dp"
              android:background="@drawable/shape_normal_transparent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_3dp">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@drawable/shape_common_title"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <TextView
            style="@style/wl_common_text"
            android:layout_weight="1"
            android:text="@string/cl_filter_user_dialog_title"
            android:textColor="@color/chiase_white"/>

        <ImageView
            android:id="@+id/img_id_done"
            style="@style/cs_common_wrap"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/cl_action_save"/>
    </LinearLayout>

    <trente.asia.calendar.commons.views.FilterUserLinearLayout
        android:id="@+id/lnr_id_user"
        style="@style/cs_common_match_wrap"
        android:layout_weight="1"
        android:orientation="vertical"/>

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        style="@style/wf_common_item_linear2"
        android:gravity="right">

        <TextView
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:text="@string/chiase_common_all"/>

        <CheckBox
            android:id="@+id/cbx_id_all"
            style="@style/wl_common_text2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"/>
    </LinearLayout>
</LinearLayout>
