<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wf_common_match">

    <LinearLayout
        android:id="@+id/lnr_calendar_container"
        style="@style/cs_common_match"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_weekly_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lnr_vertical_line_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">


                    <ScrollView
                        android:id="@+id/scroll_part1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rlt_part1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"></RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlt_expand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/ic_icon_expand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|left"
                                    android:layout_marginBottom="@dimen/margin_10dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:paddingRight="@dimen/margin_10dp"
                                    android:src="@drawable/down"
                                    android:visibility="visible" />
                            </RelativeLayout>

                        </LinearLayout>


                    </ScrollView>

                    <View
                        style="@style/cs_common_divider"
                        android:background="@color/chiase_black" />

                    <ScrollView
                        android:id="@+id/src_fragment_daily_page"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:id="@+id/lnr_part2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/lnr_part1"
                            android:orientation="vertical"></LinearLayout>

                    </ScrollView>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
