<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/chiase_white"
        android:orientation="vertical">

        <include layout="@layout/view_horizontal_user_list"/>

        <LinearLayout
            android:id="@+id/lnr_id_content_header"
            style="@style/cs_common_match_wrap"
            android:orientation="vertical"/>

        <com.github.ksoichiro.android.observablescrollview.ObservableListView
            android:id="@+id/lst_calendar_day"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"/>
    </LinearLayout>


</LinearLayout>
