<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_4dp"
              android:paddingTop="@dimen/margin_4dp"
              android:weightSum="1">


    <LinearLayout
        style="@style/cs_common_match"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_item_offer_avatar"
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:scaleType="fitXY" custom:sriv_oval="true"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                android:id="@+id/txt_item_offer_type"
                style="@style/wl_common_text_single_line"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_item_offer_date"
                style="@style/wl_common_text_single_line"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="horizontal" android:visibility="gone">

        <TextView
            android:id="@+id/txt_item_offer_username"
            style="@style/wl_common_text_single_line"
            android:layout_weight="1"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_item_offer_status"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textStyle="italic"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        style="@style/cs_common_match"
        android:layout_weight="0.4">
        <TextView
            android:layout_marginLeft="@dimen/margin_10dp"
            android:id="@+id/txt_item_offer_note"
            style="@style/wl_common_text"/>
    </LinearLayout>


</LinearLayout>
