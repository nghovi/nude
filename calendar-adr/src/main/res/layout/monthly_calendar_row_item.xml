<trente.asia.calendar.services.calendar.view.MonthlyCalendarDayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cs_common_divider"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/cl_cell_bg_color"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/margin_18dp"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/txt_id_day_label"
                style="@style/wl_common_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/margin_2dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/margin_10dp"/>

            <ImageView
                android:id="@+id/img_birthday"
                android:layout_width="@dimen/margin_12dp"
                android:layout_height="@dimen/margin_12dp"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:scaleType="fitXY"
                android:src="@drawable/cl_icon_birthday"
                android:visibility="gone"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/lnr_id_row_content"
            style="@style/cs_common_match_wrap"
            android:orientation="vertical"/>

    </LinearLayout>

</trente.asia.calendar.services.calendar.view.MonthlyCalendarDayView>
