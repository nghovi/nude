<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingLeft="@dimen/margin_16dp"
              android:paddingRight="@dimen/margin_16dp"
              android:paddingTop="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_item_offer_avatar"
        android:layout_width="@dimen/margin_32dp"
        android:layout_height="@dimen/margin_32dp"
        android:scaleType="fitXY"
        custom:sriv_oval="true"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_offer_type"
                style="@style/wl_common_text_single_line"
                android:layout_width="wrap_content" android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_item_offer_date"
                style="@style/wl_common_text_single_line"
                android:layout_width="0dp" android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_offer_username"
                style="@style/wl_common_text_single_line"
                android:layout_weight="1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_item_offer_status"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textStyle="italic"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            style="@style/cs_common_match_wrap">
            <TextView
                android:id="@+id/txt_item_offer_note"
                style="@style/wl_common_text"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
