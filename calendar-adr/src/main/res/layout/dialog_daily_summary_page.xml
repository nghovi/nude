<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_normal_transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/shape_common_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >

        <TextView
            android:id="@+id/txt_dialog_common_daily_summary"
            style="@style/wl_common_text"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/chiase_white"/>

        <ImageView
            android:id="@+id/img_id_add"
            style="@style/cs_common_wrap"
            android:layout_margin="@dimen/margin_10dp"
            android:src="@drawable/cl_action_add"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_5dp"
                android:background="@drawable/wf_background_bottom_round_corner"
                android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                android:id="@+id/txt_dialog_common_daily_summary_no_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_100dp"
                android:paddingTop="@dimen/margin_100dp"
                android:text="@string/no_schedule"
                android:textSize="18sp"/>

            <include layout="@layout/view_daily_schedules"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
