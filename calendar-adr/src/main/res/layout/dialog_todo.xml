<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/core_white"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_id_add"
            style="@style/cs_common_wrap"
            android:layout_margin="@dimen/margin_10dp"
            android:src="@drawable/wf_close_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/margin_16dp">

            <RadioButton
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_item_todo_title"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txt_item_todo_date"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_dlg_todo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_todo_dialog_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/chiase_common_delete" />

</LinearLayout>
