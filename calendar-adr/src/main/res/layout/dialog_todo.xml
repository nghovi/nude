<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/core_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_16dp"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp"
    android:paddingTop="@dimen/margin_16dp">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_id_close"
            style="@style/cs_common_wrap"
            android:src="@drawable/ic_dialog_close_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/margin_16dp">

            <RadioButton
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_item_todo_title"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txt_item_todo_date"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_dlg_todo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/btn_todo_dialog_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@drawable/wf_background_gray_border_white_padding_round"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_32dp"
        android:paddingRight="@dimen/margin_32dp"
        android:paddingTop="@dimen/margin_10dp"
        android:text="@string/calendar_common_delete" />

</LinearLayout>
