<trente.asia.welfare.adr.view.WfSlideMenuLayout android:id="@+id/drawer_layout"
                                                style="@style/cs_common_match"
                                                xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Slide Menu  -->
    <LinearLayout
        android:id="@+id/slice_menu_board"
        style="@style/cs_common_match"
        android:orientation="vertical"/>

    <LinearLayout
        style="@style/wf_common_match"
        android:background="@color/chiase_white">

        <include layout="@layout/view_navigation_header"/>

        <LinearLayout
            android:id="@+id/lnr_id_content"
            style="@style/cs_common_match_wrap"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                style="@style/wf_common_linear"
                android:background="@color/chiase_white"
                android:paddingBottom="@dimen/margin_0dp">

                <trente.asia.calendar.commons.views.UserListLinearLayout
                    android:id="@+id/lnr_id_user_list"
                    style="@style/cs_common_match_wrap"
                    android:background="@drawable/state_common_selectable_row"
                    android:orientation="horizontal">
                </trente.asia.calendar.commons.views.UserListLinearLayout>

                <TextView
                    android:id="@+id/txt_id_month"
                    style="@style/wl_common_text"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center"/>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_id_calendar"
                style="@style/cs_common_match_wrap"
                android:layout_weight="1"/>
        </LinearLayout>

        <include layout="@layout/view_common_footer"/>
    </LinearLayout>
</trente.asia.welfare.adr.view.WfSlideMenuLayout>
