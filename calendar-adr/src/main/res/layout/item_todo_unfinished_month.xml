<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cs_common_match_wrap"
    android:background="@drawable/state_common_selectable_row"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp">


    <RadioButton
        android:id="@+id/radio"
        style="@style/ClRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_item_todo_title"
        style="@style/wl_common_text"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txt_item_todo_date"
        style="@style/wl_common_text"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="center_vertical" />

</LinearLayout>


