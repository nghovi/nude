<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/margin_5dp"
    android:paddingTop="@dimen/margin_8dp">

    <RelativeLayout
        android:id="@+id/rlt_day_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_id_row_content"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="16"
            android:visibility="visible">
        </TextView>

        <TextView
            android:id="@+id/txt_id_row_schedule_mark"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_id_row_content"
            android:layout_alignLeft="@+id/txt_id_row_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/txt_id_row_content"
            android:layout_alignStart="@+id/txt_id_row_content"
            android:paddingTop="@dimen/margin_8dp"
            android:text="&#8226;"
            android:textAlignment="center"
            android:textStyle="normal|bold|italic"
            android:visibility="visible"/>


    </RelativeLayout>

</LinearLayout>
