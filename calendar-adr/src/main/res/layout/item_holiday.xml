<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cs_common_match_wrap"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_4dp"
    android:paddingTop="@dimen/margin_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/cl_icon_holiday" />

        <!--<ImageView-->
        <!--android:id="@+id/img_item_holiday_image"-->
        <!--android:layout_width="@dimen/margin_24dp"-->
        <!--android:layout_height="@dimen/margin_24dp"-->
        <!--android:layout_marginRight="@dimen/margin_10dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/cl_icon_holiday"/>-->
        <TextView
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="left|center_vertical"
            android:text="@string/holiday" />

        <TextView
            style="@style/wl_common_text"
            android:id="@+id/txt_item_holiday_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>


</LinearLayout>
