<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_10dp"
              android:paddingLeft="@dimen/margin_0dp"
              android:paddingRight="@dimen/margin_0dp"
              android:paddingTop="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_collection"
        custom:sriv_oval="true"/>

    <TextView
        android:id="@+id/txt_item_holiday_name"
        style="@style/wl_common_text"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="center_vertical"
        android:text="@string/happy_birthday"
        android:textColor="@color/cl_circle_bg_holiday"/>

</LinearLayout>
