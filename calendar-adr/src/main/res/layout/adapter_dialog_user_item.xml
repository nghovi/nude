<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/cs_common_match_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <trente.asia.android.view.layout.CheckableLinearLayout
        android:id="@+id/lnr_id_item"
        style="@style/cs_common_match_wrap"
        android:background="@drawable/state_common_selectable_row3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_10dp">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_id_avatar"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:focusable="false"
            android:scaleType="fitXY"
            custom:sriv_oval="true"/>

        <TextView
            android:id="@+id/txt_id_user_name"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1"
            android:focusable="false"/>

        <ImageView
            android:id="@+id/img_id_check"
            style="@style/cs_common_wrap"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:focusable="false"
            android:src="@drawable/cs_row_check"
            android:visibility="invisible"/>
    </trente.asia.android.view.layout.CheckableLinearLayout>

    <View style="@style/cs_common_divider"/>
</LinearLayout>