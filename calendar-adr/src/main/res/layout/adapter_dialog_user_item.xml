<?xml version="1.0" encoding="utf-8"?>
<trente.asia.android.view.layout.CheckableLinearLayout style="@style/cs_common_match_wrap"
                                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                       android:background="@drawable/state_common_selectable_row3"
                                                       android:gravity="center_vertical"
                                                       android:orientation="horizontal"
                                                       android:paddingBottom="@dimen/margin_10dp"
                                                       android:paddingLeft="@dimen/margin_16dp"
                                                       android:paddingRight="@dimen/margin_16dp"
                                                       android:paddingTop="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_id_avatar"
        android:layout_width="@dimen/margin_25dp"
        android:layout_height="@dimen/margin_25dp"
        android:focusable="false"
        android:scaleType="fitXY"
        custom:sriv_oval="true"/>

    <TextView
        android:id="@+id/txt_id_user_name"
        style="@style/wl_common_text"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_weight="1"
        android:focusable="false"
        android:textSize="@dimen/margin_12dp"/>

    <trente.asia.android.view.ChiaseSingleCheckBox
        android:id="@+id/cbx_item_selected"
        style="@style/cs_custom_checkbox"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:focusable="false"
        android:padding="@dimen/margin_0dp"/>
</trente.asia.android.view.layout.CheckableLinearLayout>