<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/cs_common_match_wrap"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_10dp"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp"
    android:paddingTop="@dimen/margin_10dp">


    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_item_birthday_user"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:scaleType="fitXY"
        custom:sriv_oval="true" />

    <TextView
        android:id="@+id/txt_item_birthday_username"
        style="@style/wl_common_text_single_line"
        android:layout_weight="1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_item_calendar_day_date"
        style="@style/wl_common_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/happy_birthday" />

</LinearLayout>
