<?xml version="1.0" encoding="utf-8"?>
<trente.asia.android.view.layout.CheckableLinearLayout
    android:id="@+id/lnr_id_item"
    style="@style/cs_common_match_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cl_state_common_selectable_row"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_id_avatar"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:focusable="false"
            android:scaleType="fitXY"
            custom:sriv_oval="true"/>

        <ImageView
            android:id="@+id/img_checked"
            android:layout_width="@dimen/margin_32dp"
            android:layout_height="@dimen/margin_32dp"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:src="@drawable/cs_row_check"
            android:visibility="gone"/>
    </RelativeLayout>


    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_width="@dimen/margin_0dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_name"
            style="@style/wl_common_text_single_line"
            android:textColor="@color/chiase_white"/>

        <trente.asia.calendar.commons.views.UserListLinearLayout
            android:id="@+id/lnr_fragment_pager_container_user_list"
            style="@style/cs_common_match_wrap"
            android:layout_marginTop="@dimen/margin_6dp"/>

    </LinearLayout>


</trente.asia.android.view.layout.CheckableLinearLayout>