<LinearLayout
    style="@style/cs_common_match_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/margin_24dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_2dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_item_schedule_calendar"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_18dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:scaleType="fitXY"
        custom:sriv_oval="true"/>

    <TextView
        android:id="@+id/txt_item_schedule_time"
        style="@style/wl_common_text"
        android:layout_width="@dimen/margin_100dp"
        android:layout_marginRight="@dimen/margin_16dp"/>
    <TextView
        android:id="@+id/txt_item_schedule_name"
        style="@style/wl_common_text_single_line"
        android:layout_height="@dimen/margin_24dp"
        android:layout_weight="1"
        android:gravity="center_vertical"/>
</LinearLayout>

