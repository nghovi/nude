<LinearLayout
    style="@style/cs_common_match_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_calendar_container"
        style="@style/cs_common_match_wrap"
        android:background="@color/wf_app_color_base"
        android:orientation="vertical"/>

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scr_calendar_day"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/cl_cell_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/view_daily_schedules"/>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

</LinearLayout>
