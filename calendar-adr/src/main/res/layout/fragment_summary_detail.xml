<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
>

    <include layout="@layout/view_common_header"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="top"
                  android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_block_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">
        </LinearLayout>

        <ListView android:id="@+id/lst_fragment_summary_detail"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>
