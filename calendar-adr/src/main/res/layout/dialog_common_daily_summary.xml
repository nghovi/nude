<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginBottom="@dimen/margin_100dp"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_100dp"
    android:background="@drawable/shape_normal_transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@drawable/shape_common_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_10dp"
    >

        <TextView
            android:id="@+id/txt_dialog_common_daily_summary"
            style="@style/wl_common_text"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/chiase_white"/>

        <ImageView
            android:id="@+id/img_id_add"
            style="@style/cs_common_wrap"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/cl_action_add"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <include layout="@layout/view_daily_schedules"/>
    </ScrollView>

</LinearLayout>
