<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/margin_50dp"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_50dp"
    android:background="@drawable/shape_normal_transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:windowIsFloating="true"
    android:windowSoftInputMode="stateUnspecified|adjustPan">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@drawable/shape_common_title"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txt_id_active_date"
            style="@style/wl_common_text"
            android:layout_weight="1"
            android:textColor="@color/chiase_white"/>

        <ImageView
            android:id="@+id/img_id_add"
            style="@style/cs_common_wrap"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/cl_action_add"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <include layout="@layout/view_daily_schedules"/>
    </ScrollView>

</LinearLayout>
