<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginBottom="@dimen/margin_50dp"
              android:layout_marginLeft="@dimen/margin_20dp"
              android:layout_marginRight="@dimen/margin_20dp"
              android:layout_marginTop="@dimen/margin_50dp"
              android:background="@drawable/shape_normal_transparent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_3dp">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@drawable/shape_common_title"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <TextView
            style="@style/wl_common_text"
            android:gravity="center"
            android:text="@string/cl_schedule_repeat_dialog_title"
            android:textColor="@color/chiase_white"/>
    </LinearLayout>

    <LinearLayout
        style="@style/wf_common_item_linear2">

        <Spinner
            android:id="@+id/spn_id_repeat_type"
            style="@style/cs_common_wrap"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/swt_id_all_day"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="right"
            android:theme="@style/wf_common_switch"/>
    </LinearLayout>

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        android:id="@+id/lnr_id_weekly_day"
        style="@style/cs_common_match_wrap"
        android:orientation="vertical">

        <include layout="@layout/view_repeat_weekly_day"/>

        <View style="@style/cs_common_divider"/>

    </LinearLayout>

    <LinearLayout
        style="@style/wf_common_item_linear2">

        <Spinner
            android:id="@+id/spn_id_repeat_limit"
            style="@style/cs_common_wrap"/>

        <LinearLayout
            android:id="@+id/lnr_id_repeat_until"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:gravity="right"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_id_repeat_limit_util"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_id_repeat_after"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:text="3"/>

            <TextView
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:text="@string/cl_schedule_repeat_dialog_times"/>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        android:id="@+id/lnr_id_done"
        style="@style/wf_common_item_linear2"
        android:background="@drawable/state_common_selectable_row">

        <TextView
            android:id="@+id/txt_id_done"
            style="@style/wl_common_text"
            android:gravity="center"
            android:text="Done"/>
    </LinearLayout>

</LinearLayout>
