<trente.asia.messenger.services.message.view.NoteView
    style="@style/wf_common_match"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match"
        android:orientation="vertical">

        <TextView
            style="@style/wl_common_text"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:text="@string/msg_board_note_title"
            android:textColor="@color/wf_ms_color_base"/>

        <View style="@style/cs_common_divider"/>

        <!--<ScrollView-->
            <!--style="@style/cs_common_match"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@color/chiase_white">-->

            <LinearLayout
                style="@style/cs_common_match"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_16dp"
                android:paddingRight="@dimen/margin_16dp"
                android:paddingTop="@dimen/margin_10dp"
                android:background="@color/chiase_white">

                <trente.asia.android.view.ChiaseEditText
                    android:id="@+id/edt_id_note"
                    style="@style/wl_common_text"
                    android:layout_height="match_parent"
                    android:background="@color/chiase_white"
                    android:gravity="left|top"
                    android:scrollHorizontally="false"
                    android:scrollbars="none"
                    android:textColorHint="@color/wf_common_color_hint"/>

            </LinearLayout>
        <!--</ScrollView>-->

        <View style="@style/cs_common_divider"/>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_10dp">

            <Button
                android:id="@+id/btn_id_edit"
                style="@style/wl_common_button_small"
                android:text="@string/chiase_common_edit"/>

            <Button
                android:id="@+id/btn_id_save"
                style="@style/wl_common_button_small"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:text="@string/chiase_common_save"/>

        </LinearLayout>

    </LinearLayout>
</trente.asia.messenger.services.message.view.NoteView>
