<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:padding="@dimen/margin_10dp"
        android:background="@android:color/darker_gray">

        <EditText
            android:id="@+id/edt_id_search"
            style="@style/wl_common_text"
            android:background="@drawable/shape_gray_border"
            android:hint="@string/msg_user_list_search_contact"
            android:inputType="textVisiblePassword"
            android:padding="@dimen/margin_8dp"
            android:textColorHint="@color/wf_common_color_hint"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lsv_id_user"
        style="@style/cs_common_match_wrap"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_weight="1"
        android:divider="@color/cs_common_divider"
        android:dividerHeight="1px"/>
</LinearLayout>
