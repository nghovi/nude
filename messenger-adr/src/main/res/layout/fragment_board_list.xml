<LinearLayout style="@style/cs_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@color/wf_app_color_base"
              android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_id_myAvatar"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:scaleType="fitXY"
            android:src="@drawable/wf_profile"
            custom:sriv_oval="true"/>

        <LinearLayout
            style="@style/cs_common_wrap"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_loginUserName"
                style="@style/wl_common_text"
                android:textColor="@color/chiase_white"
                android:textSize="@dimen/margin_14dp"/>

            <TextView
                android:id="@+id/txt_loginUserMail"
                style="@style/wl_common_text"
                android:layout_marginTop="@dimen/margin_6dp"
                android:textColor="@color/chiase_white"
                android:textSize="@dimen/margin_14dp"/>
        </LinearLayout>

        <trente.asia.android.view.ChiaseCheckableImageView
            android:id="@+id/btn_setting"
            android:layout_width="@dimen/margin_35dp"
            android:layout_height="@dimen/margin_35dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/wf_setting_small_white"/>
    </LinearLayout>
    <View style="@style/cs_common_divider"/>
    <LinearLayout
        android:id="@+id/lnr_add_to_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10dp"
        android:background="@drawable/state_board_selectable_row">
        <ImageView
            android:layout_width="@dimen/margin_40dp"
            android:layout_height="@dimen/margin_40dp"
            android:src="@drawable/ic_add_conversation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:textSize="14sp"
            android:textColor="@color/chiase_white"
            android:text="@string/msg_add_member"/>
    </LinearLayout>
    <View style="@style/cs_common_divider"/>

    <ListView
        android:id="@+id/lsv_id_board"
        style="@style/cs_common_match_wrap"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@color/cs_common_divider"
        android:dividerHeight="1px"/>

</LinearLayout>
