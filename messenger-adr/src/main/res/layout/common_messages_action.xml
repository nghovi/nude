<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lnr_id_check"
        style="@style/cs_common_wrap"
        android:background="@drawable/state_common_selectable_row2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/cs_common_wrap"
            android:src="@drawable/wf_check_small"/>

        <TextView
            android:id="@+id/txt_numb_check"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_4dp"
            android:text="0"/>
    </LinearLayout>

    <trente.asia.messenger.commons.views.MsgCheckableImageView
        style="@style/cs_common_wrap"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:src="@drawable/wf_comment_small"/>

    <TextView
        android:id="@+id/txt_id_comment_numb"
        style="@style/wl_common_text"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/margin_4dp"
        android:text="0"/>

</LinearLayout>

