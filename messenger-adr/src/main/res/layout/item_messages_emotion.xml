<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/state_common_selectable_row2"
              android:paddingBottom="@dimen/margin_5dp"
              android:paddingLeft="@dimen/margin_8dp"
              android:paddingRight="@dimen/margin_8dp"
              android:paddingTop="@dimen/margin_5dp">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="horizontal">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_avatar_msg"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:scaleType="fitXY"
            android:src="@drawable/wf_profile"
            custom:sriv_oval="true"/>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="vertical">

            <LinearLayout
                style="@style/cs_common_match_wrap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_userName"
                    style="@style/wl_common_text"
                    android:layout_width="wrap_content"
                    android:textColor="@color/wf_ms_color_base"/>

                <TextView
                    android:id="@+id/txt_message_date"
                    style="@style/wl_common_text"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/margin_6dp"/>

            </LinearLayout>

            <LinearLayout
                style="@style/cs_common_wrap"
                android:layout_marginBottom="@dimen/margin_6dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_id_icon"
                    style="@style/cs_common_wrap"
                    android:src="@drawable/wf_good"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

