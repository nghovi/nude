<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/state_common_selectable_row2"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_5dp"
              android:paddingLeft="@dimen/margin_8dp"
              android:paddingRight="@dimen/margin_8dp"
              android:paddingTop="@dimen/margin_5dp">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_avatar_msg"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:scaleType="fitXY"
            android:src="@drawable/wf_profile"
            custom:sriv_oval="true"/>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="vertical">

            <include layout="@layout/common_messages_to_user"/>

            <LinearLayout
                style="@style/cs_common_wrap"
                android:layout_marginBottom="@dimen/margin_6dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:background="@drawable/shape_attach_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10dp">

                <ImageView
                    style="@style/cs_common_wrap"
                    android:src="@drawable/wf_file"/>

                <TextView
                    android:id="@+id/txt_id_file_name"
                    style="@style/wl_common_text"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/chiase_white"/>
            </LinearLayout>

            <include layout="@layout/common_messages_action"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

