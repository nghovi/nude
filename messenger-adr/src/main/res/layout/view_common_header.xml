<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@color/wf_app_color_base"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/cs_common_wrap"
            android:padding="@dimen/margin_10dp">

            <ImageView
                android:id="@+id/img_id_header_left_icon"
                style="@style/cs_common_wrap"
                android:src="@drawable/wf_back_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_id_header_title"
            style="@style/cs_common_match_wrap"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/lnr_id_content_header_title"
                style="@style/cs_common_match"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_id_header_title"
                    style="@style/cs_common_match_wrap"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_app_title"
                    android:textColor="@color/chiase_white"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_header_right_icon"
            style="@style/cs_common_wrap"
            android:padding="@dimen/margin_10dp">

            <ImageView
                android:id="@+id/img_id_header_right_icon"
                style="@style/cs_common_wrap"
                android:src="@drawable/wf_back_white"/>
        </LinearLayout>
    </LinearLayout>

</merge>