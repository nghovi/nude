<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/margin_280dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_normal_white"
              android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@drawable/shape_common_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <TextView
            style="@style/wl_common_text"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/msg_action_list"
            android:textColor="@color/chiase_white"/>

        <ImageView
            android:id="@+id/img_id_close"
            style="@style/cs_common_wrap"
            android:src="@drawable/wf_close_white"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lsv_id_action"
        style="@style/cs_common_match_wrap"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="@dimen/margin_1dp"/>
</LinearLayout>