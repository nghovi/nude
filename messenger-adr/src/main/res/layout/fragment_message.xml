<layout>
    <trente.asia.welfare.adr.view.WfSlideMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        style="@style/cs_common_match">

        <!-- Slide Menu  -->
        <LinearLayout
            android:id="@+id/slice_menu_board"
            style="@style/cs_common_match"
            android:orientation="vertical" />

        <!-- Body  -->
        <RelativeLayout
            style="@style/cs_common_match"
            android:background="@color/chiase_white">

            <trente.asia.welfare.adr.view.LinearLayoutOnInterceptTouch
                android:id="@+id/main_layout"
                style="@style/cs_common_match"
                android:orientation="vertical">

                <include layout="@layout/view_message_header" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager_id_board"
                        style="@style/cs_common_match"/>
                    <TextView
                        android:id="@+id/txt_internet_connection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_8dp"
                        android:gravity="center"
                        android:textColor="@color/core_white"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:background="#aa000000"
                        android:text="@string/msg_no_internet_connection"/>
                </RelativeLayout>
            </trente.asia.welfare.adr.view.LinearLayoutOnInterceptTouch>

            <!-- include menu layout -->
            <View
                android:id="@+id/viewForMenuBehind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/wf_common_black_transparent"
                android:visibility="gone" />

            <!--action menu: camera, photo, recorder-->
            <include
                layout="@layout/layout_menu_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

            <include
                android:id="@+id/layout_recommend_stamp"
                layout="@layout/layout_recommend_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"/>

            <include
                android:id="@+id/layout_stamp"
                layout="@layout/layout_menu_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>

    </trente.asia.welfare.adr.view.WfSlideMenuLayout>
</layout>