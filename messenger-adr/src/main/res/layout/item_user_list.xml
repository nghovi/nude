<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@color/chiase_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_id_avatar"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        android:scaleType="fitXY"
        android:src="@drawable/wf_profile"
        custom:sriv_oval="true"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_account_name"
            style="@style/wl_common_text"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txt_id_user_name"
            style="@style/wl_common_text"
            android:layout_marginTop="@dimen/margin_6dp"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_id_add"
        style="@style/cs_common_wrap"
        android:src="@drawable/ms_icon_add"/>

</LinearLayout>