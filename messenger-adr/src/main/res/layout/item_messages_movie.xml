<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:paddingBottom="@dimen/margin_5dp"
              android:paddingLeft="@dimen/margin_8dp"
              android:paddingRight="@dimen/margin_8dp"
              android:paddingTop="@dimen/margin_5dp"
              android:background="@drawable/state_common_selectable_row2">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="horizontal">

        <trente.asia.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_avatar_msg"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:scaleType="fitXY"
            android:src="@drawable/wf_profile"
            custom:sriv_oval="true"/>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="vertical">

            <include layout="@layout/common_messages_to_user"/>

            <RelativeLayout
                android:id="@+id/rlt_media"
                android:layout_width="@dimen/margin_150dp"
                android:layout_height="@dimen/margin_150dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_6dp"
                android:padding="@dimen/margin_10dp"
                android:elevation="@dimen/margin_2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_contentMsg"
                    style="@style/cs_common_match"
                    android:scaleType="centerCrop"/>

                <ImageView
                    style="@style/cs_common_wrap"
                    android:layout_centerInParent="true"
                    android:src="@drawable/wf_movie_play"/>

                <ProgressBar
                    android:id="@+id/pgr_id_loading"
                    style="@style/cs_common_wrap"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_id_content"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:visibility="gone"/>

            <include layout="@layout/common_messages_action"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

