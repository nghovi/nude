<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              style="@style/cs_common_match_wrap"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/margin_10dp">

    <trente.asia.welfare.adr.view.SelectableRoundedImageView
        android:id="@+id/img_avatar_cmt"
        android:layout_width="@dimen/margin_30dp"
        android:layout_height="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:scaleType="fitXY"
        android:src="@drawable/wf_profile"
        custom:sriv_oval="true"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="vertical">

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_userName_cmt"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:textColor="@color/wf_ms_color_base"/>

            <TextView
                android:id="@+id/txt_date_cmt"
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_contentCmt"
            style="@style/wl_common_text"/>

        <ImageView
            android:id="@+id/img_id_emotion"
            style="@style/cs_common_wrap"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:src="@drawable/wf_good"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>