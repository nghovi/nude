<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/cs_common_match_wrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_userName"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:textColor="@color/wf_ms_color_base"/>

        <TextView
            android:id="@+id/txt_message_date"
            style="@style/wl_common_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_6dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_id_target_user"
        style="@style/cs_common_match_wrap"
        android:layout_marginTop="@dimen/margin_6dp"
        android:orientation="horizontal"
        android:visibility="gone">
    </LinearLayout>

</LinearLayout>

