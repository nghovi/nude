<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trente.asia.messenger">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:resizeableActivity="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/pn_icon" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/wf_app_color_base" />

        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainMsgActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="OPEN_ACTIVITY_1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CameraPhotoPreviewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.RecorderVideoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.FilePreviewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.CameraPhotoPreviewAccountActivity"
            android:screenOrientation="portrait" />

        <service android:name=".commons.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".commons.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!--Active android setting-->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="ms-db1.db"/>
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1"/>
        <meta-data
            android:name="AA_MODELS"
            android:value="trente.asia.messenger.services.message.model.WFMStampCategoryModel, trente.asia.messenger.services.message.model.WFMStampModel"/>
    </application>

</manifest>
