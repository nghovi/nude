<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_my_report_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dr_background_selectable"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wf_background_gray_border"
        android:paddingBottom="@dimen/margin_2dp"
        android:paddingTop="@dimen/margin_2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_2dp">

            <trente.asia.welfare.adr.view.SelectableRoundedImageView
                android:id="@+id/txt_item_my_report_avatar"
                android:layout_width="@dimen/margin_32dp"
                android:layout_height="@dimen/margin_32dp"
                android:scaleType="fitXY"
                android:src="@drawable/wf_profile"
                custom:sriv_oval="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_item_my_report_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/dr_text_username"/>

                <TextView
                    android:id="@+id/txt_item_my_report_date"
                    style="@style/dr_text_single_line_ellipsized"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:gravity="right"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_item_my_report_content"
                style="@style/dr_text_ellipsized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:id="@+id/item_report_icons">

                <include layout="@layout/item_other_report_follower_info"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
