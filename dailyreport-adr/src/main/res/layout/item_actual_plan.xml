<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wf_common_match"
    android:padding="0dp">


    <TextView
        android:id="@+id/txt_item_actual_plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/06/21"
        android:textColor="@color/chiase_black"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/dr_white_background_gray_border_padding"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/today_goal" />

            <TextView
                android:id="@+id/txt_item_actual_plan_today_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/today_performance" />

            <trente.asia.android.view.ChiaseEditText
                android:id="@+id/edt_item_actual_plan_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/chiase_common_please_input"
                android:inputType="number"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_item_actual_plan_real_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
