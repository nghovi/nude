<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wf_common_match"
    android:padding="0dp">


    <TextView
        android:id="@+id/txt_item_actual_plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:text="2017/06/21"
        android:textColor="@color/chiase_black"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/dr_background_gray_border_padding"

        android:orientation="vertical"
        android:padding="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fragment_kpi_1" />

            <TextView
                android:id="@+id/txt_item_actual_plan_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="@dimen/margin_120dp"
                android:layout_height="wrap_content"
                android:text="@string/fragment_kpi_5" />

            <trente.asia.android.view.ChiaseEditText
                android:id="@+id/edt_item_actual_plan_real"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="value" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
