<RelativeLayout style="@style/cs_common_match"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:background="@color/cs_work_background"
                android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match"
        android:orientation="vertical">

        <include layout="@layout/view_common_header"/>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                style="@style/cs_common_divider"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <trente.asia.android.view.ChiaseEditText
                android:id="@+id/edt_id_comment"
                style="@style/wl_common_edit_text_multi_line"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:hint="Comment"
                android:lines="10"
                custom:mName="reportContent"/>

            <View style="@style/cs_common_divider"/>

            <LinearLayout
                style="@style/cs_common_match_wrap"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10dp">

                <Button
                    android:id="@+id/btn_id_attach"
                    style="@style/wl_common_button_small"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/wf_file"/>

                <Button
                    android:id="@+id/btn_id_send"
                    style="@style/wl_common_button_small"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/dlr_send"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- include menu layout -->
    <View
        android:id="@+id/viewForMenuBehind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/wf_common_black_transparent"
        android:visibility="gone"/>

    <!--action menu: camera, photo, recorder-->
    <include
        layout="@layout/layout_menu_comment_attach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</RelativeLayout>
