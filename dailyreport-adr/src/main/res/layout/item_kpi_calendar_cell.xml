<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_1dp"
    android:paddingTop="@dimen/margin_1dp">


    <RelativeLayout
        android:id="@+id/item_calendar_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chiase_white"
        android:orientation="vertical">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_calendar_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="30"
            android:textColor="#0000D7"
            android:textSize="12dip"
            android:textStyle="bold"></TextView>

        <View
            android:id="@+id/view_item_kpi_calendar_cell"
            android:layout_width="@dimen/margin_16dp"
            android:layout_height="@dimen/margin_16dp"
            android:background="@drawable/dr_circle_border"
            android:visibility="invisible" />

    </RelativeLayout>
</LinearLayout>
