<RelativeLayout style="@style/cs_common_match"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/core_white"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@color/core_white">

        <include layout="@layout/view_common_header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/core_white"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/fragment_report_detail_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        style="@style/wf_common_linear">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                style="@style/dr_text_title_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/dlr_report_content"/>

                            <TextView
                                android:id="@+id/fragment_report_detail_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="@color/chiase_black"/>
                        </LinearLayout>


                        <trente.asia.android.view.ZoomableTextView
                            android:id="@+id/fragment_report_edit_edt_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_16dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:ellipsize="none"/>

                        <LinearLayout
                            android:id="@+id/fragment_report_detail_lnr_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/wf_margin_16"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fragment_report_detail_txt_custom_title"
                                style="@style/dr_text_title_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/fragment_report_detail_txt_custom_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fragment_report_detail_kpi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_16dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <include layout="@layout/view_kpi_detail"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/cs_common_match_wrap"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/share_lnr_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_10dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/fragment_report_detail_img_check"
                                    style="@style/cs_common_wrap"
                                    android:layout_marginRight="@dimen/margin_6dp"
                                    android:src="@drawable/wf_seen"/>

                                <TextView
                                    android:id="@+id/share_lnr_check_txt_checked_num"
                                    style="@style/dr_text_follower_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/share_lnr_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_10dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/fragment_report_detail_img_like"
                                    style="@style/cs_common_wrap"
                                    android:layout_marginRight="@dimen/margin_6dp"
                                    android:src="@drawable/wf_good"/>

                                <TextView
                                    android:id="@+id/share_lnr_like_txt_num"
                                    style="@style/dr_text_follower_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/share_lnr_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_10dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/fragment_report_detail_img_comment"
                                    style="@style/cs_common_wrap"
                                    android:layout_marginRight="@dimen/margin_6dp"
                                    android:src="@drawable/wf_comment"/>

                                <TextView
                                    android:id="@+id/share_lnr_comment_txt_num"
                                    style="@style/dr_text_follower_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/share_lnr_file"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/fragment_report_detail_img_file"
                                    style="@style/cs_common_wrap"
                                    android:layout_marginRight="@dimen/margin_6dp"
                                    android:src="@drawable/dr_report"/>

                                <TextView
                                    android:id="@+id/share_lnr_file_txt_num"
                                    style="@style/dr_text_follower_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <trente.asia.android.view.ChiaseListViewNoScroll
                        android:id="@+id/fragment_report_detail_lst_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/lnr_enter_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/cs_common_divider"/>

                <LinearLayout
                    style="@style/cs_common_match_wrap"
                    android:background="@color/chiase_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_8dp">

                    <trente.asia.android.view.ChiaseEditText
                        android:id="@+id/edt_id_comment"
                        style="@style/wl_common_text"
                        android:layout_weight="1"
                        android:background="@color/chiase_white"
                        android:gravity="left|center_vertical"
                        android:hint="@string/dr_comment_edittext_hint"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:scrollHorizontally="false"
                        android:textColorHint="@color/wf_common_color_hint"/>

                    <ImageButton
                        android:id="@+id/btn_id_send_cmt"
                        style="@style/cs_common_wrap"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:background="@color/chiase_white"
                        android:src="@drawable/wf_attachment"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_btn_like_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:background="@color/wf_login_background_color"
                android:paddingTop="@dimen/margin_10dp">

                <LinearLayout
                    android:id="@+id/fragment_report_detail_btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/wf_margin_10"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wf_comment"/>

                    <TextView
                        android:id="@+id/fragment_report_detail_txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlr_add_comment"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fragment_report_detail_btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/img_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wf_good"/>

                    <TextView
                        android:id="@+id/fragment_report_detail_txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlr_like"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!-- include menu layout -->
    <View
        android:id="@+id/viewForMenuBehind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/wf_common_black_transparent"
        android:visibility="gone"/>

    <!--action menu: camera, photo, recorder-->
    <include
        layout="@layout/layout_menu_comment_attach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</RelativeLayout>
