<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/wf_login_background_color"
              android:orientation="vertical"
              android:padding="0dp">

    <include layout="@layout/view_common_header"/>


    <LinearLayout
        style="@style/cs_common_match"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            style="@style/wf_common_linear"
            android:paddingBottom="@dimen/wf_margin_16">

            <include layout="@layout/view_common_calendar_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wf_margin_16"
                android:orientation="vertical">

                <include
                    android:id="@+id/fragment_other_report_spn_dept"
                    layout="@layout/view_wf_spinner"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/wf_margin_10"
                    android:orientation="vertical">
                </LinearLayout>

                <include
                    android:id="@+id/fragment_other_report_spn_user"
                    layout="@layout/view_wf_spinner"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_txt_calendar_header_date"
            style="@style/dr_date_header"/>

        <ListView
            android:id="@+id/fragment_other_report_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/fragment_other_report_calandar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/core_gray"
            android:orientation="vertical">

            <View style="@style/dr_common_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_1dp">

                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/wf_login_background_color"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/horizontalScrollViewHeader"
                    android:background="@color/wf_login_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/fragment_others_report_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="false">

                <LinearLayout
                    style="@style/cs_common_match_wrap"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnr_id_user"
                        android:layout_width="@dimen/margin_100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/horizontalScrollViewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/fragment_others_report_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>
