<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wf_common_match"
    android:padding="0dp">

    <include layout="@layout/view_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_fragment_kpi_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_fragment_kpi_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16dp"
                android:text="2017/06/21"
                android:textColor="@color/chiase_black"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:src="@drawable/dr_calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp">

            <RelativeLayout
                style="@style/cs_common_wrap"
                android:layout_marginRight="@dimen/margin_6dp"
                android:gravity="center_vertical">

                <trente.asia.android.view.ChiaseCheckableImageView
                    android:id="@+id/btn_calendar_header_back"
                    style="@style/dr_button_previous" />

                <TextView
                    style="@style/wl_common_text"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/btn_prev"
                    android:textColor="@color/chiase_white" />
            </RelativeLayout>

            <LinearLayout
                style="@style/cs_common_match_wrap"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/img_calendar_header_this_group"
                    style="@style/wl_common_button_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_32dp"
                    android:text="@string/header_calendar_this_month"
                    android:textColor="@color/chiase_white"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                style="@style/cs_common_wrap"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:gravity="center_vertical">

                <trente.asia.android.view.ChiaseCheckableImageView
                    android:id="@+id/btn_calendar_header_next"
                    style="@style/dr_button_next" />

                <TextView
                    style="@style/wl_common_text"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/btn_next"
                    android:textColor="@color/chiase_white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@drawable/dr_background_gray_border_padding"

            android:orientation="vertical"
            android:padding="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragment_kpi_1" />

                <TextView
                    android:id="@+id/txt_fragment_kpi_value_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragment_kpi_2" />

                <TextView
                    android:id="@+id/txt_fragment_kpi_value_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragment_kpi_3" />

                <TextView
                    android:id="@+id/txt_fragment_kpi_value_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragment_kpi_4" />

                <TextView
                    android:id="@+id/txt_fragment_kpi_value_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">

                <TextView
                    android:layout_width="@dimen/margin_120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_kpi_5" />

                <trente.asia.android.view.ChiaseEditText
                    android:id="@+id/txt_fragment_kpi_value_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_fragment_kpi_save"
            style="@style/wl_common_button_small"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/header_calendar_this_month"
            android:textColor="@color/chiase_white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="Group A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/view_common_footer" />

</LinearLayout>
