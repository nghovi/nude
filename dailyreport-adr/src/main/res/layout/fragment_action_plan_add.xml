<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cs_work_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="0dp">

    <include layout="@layout/view_common_header" />

    <TextView
        android:id="@+id/txt_fragment_action_plan_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_weight="1"
        android:text="@string/user_has_no_action_plan_setup"
        android:textAlignment="center"
        android:textColor="@color/chiase_red"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lnr_fragment_action_plan_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/wf_login_background_color"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            style="@style/wf_common_linear"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="@dimen/wf_margin_16">

            <TextView
                android:id="@+id/txt_fragment_kpi_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:text="2017/06/21"
                android:textColor="@color/chiase_black"
                android:textStyle="bold" />

            <include layout="@layout/view_common_groups_header" />
        </LinearLayout>


        <ScrollView
            android:id="@+id/src_id_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/my_report_fragment_calendar_view"
                    layout="@layout/view_kpi_calendar" />

                <LinearLayout
                    android:id="@+id/my_report_kpi_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:paddingRight="@dimen/margin_16dp">

                    <LinearLayout
                        android:id="@+id/lnr_id_monthly_goal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/wf_margin_16"
                        android:layout_marginTop="@dimen/wf_margin_16"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/wf_margin_16"
                        android:paddingLeft="@dimen/wf_margin_16"
                        android:paddingRight="@dimen/wf_margin_16"
                        android:visibility="invisible">

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/supplement_memo" />

                    <trente.asia.android.view.ChiaseEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dr_background_gray_border_padding"
                        android:lines="4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_fragment_my_report_cancel"
                            style="@style/wl_common_button_small"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text="@string/chiase_common_cancel" />

                        <Button
                            android:id="@+id/btn_fragment_my_report_save"
                            style="@style/wl_common_button_small"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/chiase_common_save" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_32dp"
            android:paddingRight="@dimen/margin_32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_200dp"
                android:background="@drawable/lnr_background_oval"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment_common_list_empty"
                android:textColor="@color/chiase_white"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_common_footer" />

</LinearLayout>
