<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cs_work_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="0dp">

    <include layout="@layout/view_common_header" />

    <LinearLayout
        android:id="@+id/lnr_fragment_action_plan_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/wf_login_background_color"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/lnr_header"
            style="@style/wf_common_linear"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="@dimen/wf_margin_10"
            android:paddingBottom="@dimen/wf_margin_10">

            <TextView
                android:id="@+id/txt_fragment_kpi_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:text="2017/06/21"
                android:textColor="@color/chiase_black"
                android:textStyle="bold" />

            <include layout="@layout/view_common_groups_header" />
        </LinearLayout>


        <ScrollView
            android:id="@+id/src_id_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_fragment_action_plan_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingBottom="@dimen/margin_32dp"
                    android:paddingTop="@dimen/margin_32dp"
                    android:text="@string/action_plan_empty"
                    android:visibility="gone" />

                <trente.asia.dailyreport.services.kpi.view.WrapContentHeightViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/my_report_kpi_section"
                    android:background="@color/wf_login_background_color">

                </trente.asia.dailyreport.services.kpi.view.WrapContentHeightViewPager>

                <LinearLayout
                    android:id="@+id/lnr_action_plan_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:paddingRight="@dimen/margin_16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/lnr_actual_plan_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/wf_margin_16"
                        android:layout_marginTop="@dimen/wf_margin_16"
                        android:orientation="vertical"
                        android:visibility="visible">

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:text="@string/supplement_memo" />

                    <trente.asia.android.view.ChiaseEditText
                        android:id="@+id/edt_supplement_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:lines="4" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <include layout="@layout/view_common_footer" />

</LinearLayout>
