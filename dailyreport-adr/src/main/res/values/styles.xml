<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="cs_work_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/cs_work_edittext_text_color</item>
        <item name="android:textColorHint">@color/cs_work_edittext_hint_color
        </item>
        <item name="android:background">@drawable/shape_common_gray_border
        </item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dr_button_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:background">@drawable/dr_button_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dr_button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/dr_button_next</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dr_button_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/dr_button_prev</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dr_button_small">
        <item name="android:src">@drawable/dr_btn_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dr_edit_text_small" parent="@style/cs_common_match_wrap">
        <item name="android:background">@drawable/shape_gray_border</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_edit_text_small_no_corner" parent="@style/cs_common_match_wrap">
        <item name="android:background">
            @drawable/dr_background_gray_border_padding
        </item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="cs_work_text_footer_item">
        <item name="android:textColor">@color/cs_work_footer_text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NumberPickerTextColorStyle">
        <item name="android:textColorPrimary">@color/chiase_black</item>
    </style>

    <style name="dr_text_single_line_ellipsized">
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_single_line_ellipsized_kpi_num">
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_single_line_ellipsized_goal_entry">
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_ellipsized">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_username">
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:textColor">@color/dr_text_user_name</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_title">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_title_bold">
        <item name="android:textColor">@color/wf_common_color_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_value_single_ellipsized">
        <item name="android:textColor">@color/wf_common_color_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_value">
        <item name="android:textColor">@color/wf_common_color_text</item>
    </style>

    <style name="dr_text_follower_info">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/file_count</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_value_black_bold">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_black_bold_single_ellipsized">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_bold_single_ellipsized">
        <item name="android:textColor">@color/wf_dr_color_base</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_date_header">
        <item name="android:textColor">@color/core_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/wf_dr_color_base</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_white_bold">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_value_comment">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="dr_text_edit_text_value">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_number">
        <item name="android:layout_width">@dimen/margin_20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!--<item name="android:background">@drawable/customcheckbox_background</item>-->
        <item name="android:textColor">@color/core_silver</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dr_text_footer_item">
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="dr_text_day">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dr_common_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
