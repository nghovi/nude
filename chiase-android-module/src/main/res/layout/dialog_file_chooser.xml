<LinearLayout
    android:id="@+id/saveFileDialog"
    style="@style/cs_common_match"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/chiase_white">

    <ListView
        android:id="@+id/lsv_id_file"
        style="@style/cs_common_match_wrap"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/fileAction"
        style="@style/cs_common_match_wrap"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5dp"
        android:paddingTop="@dimen/margin_5dp">

        <Button
            android:id="@+id/fileOk"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:text="Ok"/>

        <Button
            android:id="@+id/fileCancel"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:text="Cancel"/>
    </LinearLayout>
</LinearLayout>