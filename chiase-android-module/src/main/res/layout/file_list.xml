<asia.chiase.android.view.layout.CheckableLinearLayout
    style="@style/cs_common_match_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_id_icon"
        android:layout_width="@dimen/margin_25dp"
        android:layout_height="@dimen/margin_25dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_folder"/>

    <TextView
        android:id="@+id/txt_id_name"
        style="@style/cs_common_match_wrap"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_toRightOf="@+id/img_id_icon"
        android:layout_weight="1"/>

    <CheckBox
        android:id="@+id/cbx_id_choose"
        style="@style/cs_common_wrap"
        android:layout_alignParentRight="true"
        android:background="@drawable/customcheckbox_background"
        android:button="@drawable/cs_custom_checkbox"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>
</asia.chiase.android.view.layout.CheckableLinearLayout>