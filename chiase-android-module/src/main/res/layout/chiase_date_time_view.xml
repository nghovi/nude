<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              style="@style/cs_common_wrap"
              android:padding="10dp"
              android:background="@color/chiase_white">

    <DatePicker
        android:id="@+id/date_picker"
        style="@style/cs_common_match_wrap"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:datePickerMode="spinner"/>

    <TimePicker
        android:id="@+id/time_picker"
        style="@style/cs_common_match_wrap"
        android:layout_weight="2"
        android:timePickerMode="spinner"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:padding="10dp"
        android:gravity="right">

        <TextView
            android:id="@+id/txt_id_cancel"
            style="@style/cs_common_wrap"
            android:textColor="@color/chiase_green2"
            android:text="@string/chiase_date_time_view_cancel_button"
            android:layout_marginRight="20dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txt_id_set"
            style="@style/cs_common_wrap"
            android:textColor="@color/chiase_green2"
            android:text="@string/chiase_date_time_view_set_button"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>