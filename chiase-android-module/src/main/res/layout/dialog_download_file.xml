<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="@dimen/margin_280dp"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/shape_normal_white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="@dimen/margin_10dp">

    <TextView
        android:id="@+id/txt_id_title"
        style="@style/cs_common_wrap"
        android:text="@string/chiase_common_action_downloading"
        android:textColor="@color/cs_download_dialog_text"
        android:textSize="@dimen/margin_17dp"/>

    <ProgressBar
        android:id="@+id/pgr_id_download"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:max="100"
        android:progress="0"/>

    <TextView
        android:id="@+id/txt_id_progress"
        style="@style/cs_common_wrap"
        android:layout_marginTop="10dp"
        android:text="0/0"
        android:textColor="@color/cs_download_dialog_text"
        android:textSize="@dimen/margin_15dp"/>

</LinearLayout>