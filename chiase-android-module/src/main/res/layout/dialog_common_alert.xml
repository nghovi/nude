<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_normal_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_id_msg"
        style="@style/cs_common_match_wrap"
        android:lineSpacingExtra="6dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="32dp"
        android:textSize="16dp"/>

    <LinearLayout
        android:id="@+id/lnr_id_positive"
        style="@style/cs_common_match_wrap"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/state_common_selectable_row"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txt_id_positive"
            style="@style/cs_common_wrap"
            android:text="@string/chiase_common_ok"/>
    </LinearLayout>
</LinearLayout>