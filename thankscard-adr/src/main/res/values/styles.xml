<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tc_button_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:background">@drawable/tc_button_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tc_button_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:background">@drawable/tc_button_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tc_button_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:background">@drawable/tc_button_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tc_button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:background">@drawable/pager_button_next</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tc_button_prev">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:background">@drawable/pager_button_back</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tc_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/tc_edittext_text_color</item>
        <item name="android:textColorHint">@color/tc_edittext_text_color</item>
        <item name="android:background">@drawable/shape_common_gray_border
        </item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tc_edit_text2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/tc_edittext_text_color</item>
        <item name="android:textColorHint">@color/tc_edittext_text_color</item>
        <item name="android:background">@drawable/shape_common_gray_border2
        </item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NumberPickerTextColorStyle">
        <item name="android:textColorPrimary">@color/chiase_white</item>
    </style>

    <style name="core_line_divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="core_line_divider_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/chiase_black</item>
    </style>

    <style name="core_line_divider_thick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/margin_1dp</item>
        <item name="android:background">@color/chiase_white</item>
    </style>

    <style name="tc_text_black">
        <item name="android:textColor">@color/chiase_black</item>
    </style>

    <style name="tc_text_black_12">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tc_text_black_bold">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tc_text_black_bold_month">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tc_text_white_bold">
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tc_text_ranking">
        <item name="android:textColor">@color/tc_item_indicator_background
        </item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@color/tc_item_background</item>
    </style>

    <style name="tc_text_black_bold_italic">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="tc_text_white_bold_italic">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="tc_text_card_frame_small">
        <item name="android:textColor">@color/chiase_black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tc_text_footer_item">
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tc_text_mypage_button">
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/shape_common_gray_border
        </item>
        <item name="android:prompt">@string/fragment_tc_detail_date</item>
    </style>
</resources>
