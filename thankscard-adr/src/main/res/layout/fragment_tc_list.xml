<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/wf_common_match">

    <include layout="@layout/view_common_header_strip"/>

    <trente.asia.thankscard.services.rank.view.TCTabLinearLayout
        android:id="@+id/tc_tab_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/wf_margin_16"
        android:paddingLeft="@dimen/wf_margin_16"
        android:paddingRight="@dimen/wf_margin_16"
        android:paddingTop="@dimen/wf_margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wf_margin_16"
            android:orientation="vertical">

            <include
                android:id="@+id/spn_fragment_tc_list_departure"
                layout="@layout/view_wf_spinner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wf_margin_10"
                android:orientation="vertical">
            </LinearLayout>

            <include
                android:id="@+id/spn_fragment_tc_list_user"
                layout="@layout/view_wf_spinner"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wf_margin_16"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_fragment_tc_list_month_title"
                android:layout_width="@dimen/margin_120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_left_radius"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5dp"
                android:paddingTop="@dimen/margin_5dp"
                android:text="@string/fragment_tc_list_date"
                android:textColor="@color/chiase_white"/>

            <TextView
                android:id="@+id/txt_fragment_tc_list_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_common_gray_border"
                android:paddingBottom="@dimen/margin_5dp"
                android:paddingLeft="6dp"
                android:paddingTop="@dimen/margin_5dp"
                android:textColor="@color/chiase_black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_view_common_pager_back"
                    style="@style/tc_button_prev"
                    android:layout_width="60dp"
                    android:text="@string/fragment_tc_list_back"/>

                <Button
                    android:id="@+id/btn_view_common_pager_next"
                    style="@style/tc_button_next"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/fragment_tc_list_next"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wf_app_color_base"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_fragment_post_edit_message"
                android:textColor="@color/chiase_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tc_fragment_background"
            android:paddingTop="@dimen/wf_margin_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tc_fragment_background"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="0dp">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical"
                        >

                        <TableLayout
                            android:id="@+id/tbl_page_with_table"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/tc_fragment_background"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:stretchColumns="*">


                        </TableLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

        </LinearLayout>

    </trente.asia.thankscard.services.rank.view.TCTabLinearLayout>

    <Button
        android:id="@+id/btn_fragment_month_post"
        style="@style/wl_common_button_small"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/wf_margin_16"
        android:layout_marginLeft="@dimen/wf_margin_16"
        android:layout_marginRight="@dimen/wf_margin_16"
        android:text="@string/fragment_month_post_button"
        android:visibility="visible"/>

    <include layout="@layout/view_common_footer"/>


</LinearLayout>
