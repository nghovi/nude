<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/wf_common_match">

    <include layout="@layout/view_common_header_strip" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wf_margin_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/wf_margin_16"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_view_common_pager_back"
                        style="@style/tc_button_prev"
                        android:text="@string/fragment_tc_list_back" />

                    <Button
                        android:id="@+id/btn_view_common_pager_next"
                        style="@style/tc_button_next"
                        android:layout_marginLeft="10dp"
                        android:text="@string/fragment_tc_list_next" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wf_app_color_base"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:paddingStart="@dimen/margin_16dp"
                    android:paddingTop="@dimen/margin_5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_fragment_post_edit_message"
                        android:textColor="@color/chiase_white" />

                </LinearLayout>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <android.support.percent.PercentRelativeLayout
                        android:id="@+id/rlt_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:background="@color/chiase_white">

                        <ImageView
                            android:id="@+id/layout_photo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/img_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" />

                        <ImageView
                            android:id="@+id/img_secret"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/tc_ic_secret" />
                    </android.support.percent.PercentRelativeLayout>

                    <LinearLayout
                        android:id="@+id/lnr_message"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_widthPercent="50%">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_tc_detail_date"
                                style="@style/tc_text_black_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/fragment_tc_detail_date" />

                            <TextView
                                android:id="@+id/txt_tc_detail_to"
                                style="@style/tc_text_black_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginBottom="@dimen/margin_10dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/fragment_tc_detail_to" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_message"
                            style="@style/tc_text_black_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:padding="@dimen/margin_0dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rlt_stickers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rlt_card"
                        android:layout_alignEnd="@id/rlt_card"
                        android:layout_alignStart="@+id/rlt_card"
                        android:layout_alignTop="@+id/rlt_card" />

                    <ImageView
                        android:id="@+id/img_seal"
                        android:layout_width="@dimen/margin_60dp"
                        android:layout_height="@dimen/margin_60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:src="@drawable/tc_ic_seal" />

                    <RelativeLayout
                        android:id="@+id/layout_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlt_card"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/margin_8dp"
                        android:paddingTop="@dimen/margin_8dp">

                        <ImageView
                            android:id="@+id/stage_icon"
                            android:layout_width="@dimen/margin_32dp"
                            android:layout_height="@dimen/margin_32dp"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/tc_ranking_medal4" />

                        <trente.asia.welfare.adr.view.SelectableRoundedImageView
                            android:id="@+id/img_sender_avatar"
                            android:layout_toEndOf="@id/stage_icon"
                            android:layout_width="@dimen/margin_32dp"
                            android:layout_height="@dimen/margin_32dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/wf_profile"
                            custom:sriv_oval="true" />

                        <TextView
                            android:id="@+id/txt_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_8dp"
                            android:layout_toEndOf="@+id/img_sender_avatar"
                            android:text="@string/fragment_card_detail_from"
                            android:textColor="@color/chiase_black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_sender_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_from"
                            android:layout_marginStart="@dimen/margin_8dp"
                            android:layout_toEndOf="@+id/img_sender_avatar"
                            android:textColor="@color/chiase_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_fragment_tc_detail_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:text="@string/fragment_tc_detail_send_post"
                            android:textColor="@color/tc_item_indicator_background" />
                    </RelativeLayout>

                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/view_common_footer" />
</LinearLayout>
