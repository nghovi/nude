<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/wf_common_match">

    <include layout="@layout/view_common_header_strip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/wf_margin_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/rlt_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:background="@color/chiase_white">

                    <ImageView
                        android:id="@+id/layout_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_card"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true" />
                </android.support.percent.PercentRelativeLayout>

                <LinearLayout
                    android:id="@+id/lnr_message"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="50%">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_tc_detail_date"
                            style="@style/tc_text_black_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/fragment_tc_detail_date" />

                        <TextView
                            android:id="@+id/txt_tc_detail_to"
                            style="@style/tc_text_black_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/fragment_tc_detail_to" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_message"
                        style="@style/tc_text_black_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_0dp"
                        android:paddingEnd="@dimen/margin_10dp"
                        android:paddingStart="@dimen/margin_10dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlt_stickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/rlt_card"
                    android:layout_alignEnd="@id/rlt_card"
                    android:layout_alignStart="@+id/rlt_card"
                    android:layout_alignTop="@+id/rlt_card" />

            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
