<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/wf_common_match">

        <include layout="@layout/view_common_header_strip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/tc_text_black_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/tc_confirm_dialog_title" />

            <TextView
                android:id="@+id/confirm_msg"
                style="@style/tc_text_black_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/tc_confirm_msg" />

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/rlt_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/chiase_white">

                    <ImageView
                        android:id="@+id/layout_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_card"
                        android:layout_width="match_parent"
                        android:adjustViewBounds="true"
                        android:minHeight="200dp" />
                </android.support.percent.PercentRelativeLayout>

                <LinearLayout
                    android:id="@+id/lnr_message"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_widthPercent="50%">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_tc_detail_to"
                            style="@style/tc_text_black_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/fragment_tc_detail_to" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_tc_detail_date"
                        style="@style/tc_text_black_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/fragment_tc_detail_date" />

                    <TextView
                        android:id="@+id/text_message"
                        style="@style/tc_text_black_bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_0dp"
                        android:paddingEnd="@dimen/margin_10dp"
                        android:paddingStart="@dimen/margin_10dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlt_stickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/rlt_card"
                    android:layout_alignEnd="@id/rlt_card"
                    android:layout_alignStart="@+id/rlt_card"
                    android:layout_alignTop="@+id/rlt_card" />

                <LinearLayout
                    android:id="@+id/lnr_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlt_card"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/checkbox_secret"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/tc_text_black_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:text="@string/tc_secret_mode" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnr_checkbox"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_cancel"
                        style="@style/tc_text_white_14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_32dp"
                        android:layout_weight="1"
                        android:background="@color/wf_login_button_color_on"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_8dp"
                        android:paddingTop="@dimen/margin_8dp"
                        android:text="@string/wf_cancel" />

                    <TextView
                        android:id="@+id/btn_done"
                        style="@style/tc_text_white_14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_32dp"
                        android:layout_marginStart="@dimen/margin_32dp"
                        android:layout_weight="1"
                        android:background="@color/wf_login_button_color_on"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_8dp"
                        android:paddingTop="@dimen/margin_8dp"
                        android:text="@string/chiase_common_send" />
                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
