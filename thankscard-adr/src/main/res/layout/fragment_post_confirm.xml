<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/wf_common_match"
              android:padding="0dp">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        style="@style/cs_common_match"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/wf_margin_16"
        android:paddingRight="@dimen/wf_margin_16">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tc_fragment_background"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wf_margin_16"
            android:paddingRight="@dimen/wf_margin_16"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <include
                layout="@layout/page_tc_detail"
                android:id="@+id/page_posted_confirm_fragment"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_fragment_post_confirm_cancel"
                style="@style/tc_button_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_post_confirm_btn_cancel"
                android:layout_marginRight="9dp"/>

            <Button
                android:id="@+id/btn_fragment_post_confirm_submit"
                style="@style/tc_button_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_post_confirm_btn_submit"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
