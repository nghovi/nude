<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/round_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tc_confirm_dialog_title"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textColor="@color/chiase_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txt_poster_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tc_confirm_name"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:textColor="@color/chiase_black"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tc_confirm_msg"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:textColor="@color/chiase_black"
            android:textSize="14sp" />
        <CheckBox
            android:id="@+id/checkbox_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tc_secret_mode"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:textColor="@color/chiase_black"
            android:textSize="14sp"
            android:buttonTint="@color/chiase_black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tc_dialog_confirm_divider"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wf_cancel"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:padding="@dimen/margin_16dp"
                android:textColor="@color/tc_dialog_confirm_text"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/tc_dialog_confirm_divider"/>
            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/tc_ok"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/tc_dialog_confirm_text"
                android:padding="@dimen/margin_16dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>
