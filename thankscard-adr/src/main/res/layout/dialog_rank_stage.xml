<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_rank_stage_dialog"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
        android:id="@+id/txt_rank_stage_dialog_title"
        style="@style/tc_text_white_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/dialog_rank_stage_title"/>

    <View style="@style/core_line_divider_thick"/>

    <ListView
        android:id="@+id/lst_rank_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_dialog_rank_stage_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_normal_white"
        android:padding="@dimen/margin_5dp"
        android:text="@string/dialog_rank_stage_cancel"
        android:textColor="@color/tc_rank_stage_dlg_button"/>

</LinearLayout>
