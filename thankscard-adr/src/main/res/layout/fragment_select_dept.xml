<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wf_login_background_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:orientation="horizontal"
            android:padding="@dimen/margin_8dp">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/margin_8dp"
                android:text="@string/wf_cancel"
                android:textColor="@color/chiase_blue"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/tc_select_dept"
                android:textColor="@color/chiase_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/margin_8dp"
                android:text="@string/wf_done"
                android:textColor="@color/chiase_blue"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@drawable/edt_search_bgr"
            android:hint="@string/tc_search"
            android:padding="@dimen/margin_10dp"
            android:textColor="@color/chiase_black"
            android:textSize="14sp" />

        <View style="@style/cs_common_divider" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_departments"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
