<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:background="@color/tc_item_background"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal"
              android:padding="@dimen/margin_10dp">

    <ImageView
        android:id="@+id/img_view_common_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/wf_back_white"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_view_common_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:textColor="@color/chiase_black"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_view_common_header_setting"
        android:src="@drawable/tc_icon_setting"
        android:visibility="invisible"/>

</LinearLayout>

