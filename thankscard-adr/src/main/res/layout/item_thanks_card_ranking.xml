<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lnr_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_common_gray_border2"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="2dp"
              android:paddingLeft="@dimen/wf_margin_16"
              android:paddingRight="10dp"
              android:paddingTop="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/img_item_thanks_card_ranking_medal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tc_ranking_medal1"/>

        <TextView
            android:id="@+id/item_thanks_card_ranking_rank"
            style="@style/tc_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone"/>
    </LinearLayout>

    <trente.asia.thankscard.services.rank.view.RoundedImageView
        android:id="@+id/img_item_thanks_card_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/tc_icon_mypage_gray"/>

    <TextView
        android:id="@+id/item_thanks_card_ranking_person"
        style="@style/tc_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/item_thanks_card_ranking_point"
        style="@style/tc_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"/>

</LinearLayout>
