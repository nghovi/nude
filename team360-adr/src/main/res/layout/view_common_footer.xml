<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:id="@+id/lnr_view_common_footer_member"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                style="@style/cs_common_wrap"
                android:alpha="0.5"
                android:src="@drawable/tm_footer_member"
                android:layout_centerInParent="true"/>

            <TextView
                style="@style/dr_text_footer_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margin_30dp"
                android:text="@string/footer_item1"
                android:textColor="@color/core_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lnr_view_common_footer_camera"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/cs_common_wrap"
                android:alpha="0.5"
                android:src="@drawable/tm_footer_camera"
                android:layout_centerInParent="true"/>

            <TextView
                style="@style/dr_text_footer_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margin_30dp"
                android:text="@string/footer_item2"
                android:textColor="@color/core_gray"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lnr_view_common_footer_setting"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/cs_common_wrap"
                android:alpha="0.5"
                android:src="@drawable/tm_footer_setting"
                android:layout_centerInParent="true"/>

            <TextView
                style="@style/dr_text_footer_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margin_30dp"
                android:text="@string/footer_item3"
                android:textColor="@color/core_gray"/>
        </RelativeLayout>

    </LinearLayout>

</merge>