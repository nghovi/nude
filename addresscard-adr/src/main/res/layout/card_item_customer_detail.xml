<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="card"
            type="trente.asia.addresscard.services.business.model.BusinessCardModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ac_icon_card"
            android:text="@{card.cardName}"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            style="@style/ac_body_text"
            android:padding="@dimen/title_padding"
            android:drawablePadding="@dimen/ac_text_padding"/>
        <RelativeLayout
            android:id="@+id/rlt_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_common_selectable_row">
            <ImageView
                android:id="@+id/card"
                android:layout_width="@dimen/ac_card_width"
                android:layout_height="@dimen/ac_card_height"
                android:padding="@dimen/margin_5dp"
                android:scaleType="fitXY"
                android:src="@drawable/card" />

            <View
                android:id="@+id/divider1"
                android:layout_width="1dp"
                android:layout_height="@dimen/ac_card_height"
                android:layout_toEndOf="@+id/card"
                android:background="@color/ac_common_background" />

            <LinearLayout
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ac_card_half_height"
                android:layout_toEndOf="@id/divider1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ac_text_padding"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@{card.cardEmail}" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/ac_card_half_height"
                    android:src="@drawable/ac_icon_mail"
                    android:padding="@dimen/margin_10dp"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/mail"
                android:layout_toEndOf="@+id/divider1"
                android:background="@color/ac_common_background" />
            <LinearLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/divider1"
                android:layout_below="@+id/divider2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ac_text_padding"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@{card.cardTel}" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/ac_card_half_height"
                    android:src="@drawable/ac_icon_phone"
                    android:padding="@dimen/margin_10dp" />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/card"
                android:background="@color/ac_common_background" />

            <TextView
                android:id="@+id/note"
                style="@style/ac_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider3"
                android:maxLines="3"
                android:padding="@dimen/ac_text_padding"
                android:text="@{card.cardNote}" />
        </RelativeLayout>
    </LinearLayout>
</layout>