<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="java.util.List" />

        <import type="trente.asia.addresscard.services.shop.model.TagModel" />

        <variable
            name="tags"
            type="List&lt;TagModel&gt;" />
    </data>

    <LinearLayout
        style="@style/cs_common_match"
        android:background="@color/wf_login_background_color"
        android:orientation="vertical">


        <include layout="@layout/ac_header" />

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/wf_app_color_base_30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlt_tags"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/category_height"
                    android:background="@drawable/state_common_selectable_row">

                    <TextView
                        android:id="@+id/text_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:text="@string/fragment_shop_cards_tags"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:id="@+id/arrow_category"
                        style="@style/ac_icon_right"
                        android:src="@drawable/ac_action_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/divider_filter"
                    style="@style/cs_common_divider"
                    android:layout_below="@+id/rlt_tags" />

                <TextView
                    android:id="@+id/txt_tags"
                    android:background="@color/core_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_filter"
                    android:padding="@dimen/margin_8dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@{TagModel.getSelectedTagsString(context, tags)}"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/list_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tags"
                    android:paddingStart="@dimen/margin_8dp"
                    android:paddingEnd="@dimen/margin_8dp"
                    android:paddingTop="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_16dp"
                    android:text="@string/ac_latest_card_list"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_cards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/list_card_title"
                    android:layout_above="@+id/btn_delete"
                    android:background="@color/core_white" />

                <Button
                    android:id="@+id/btn_delete"
                    style="@style/ac_delete_button"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/ac_delete_card"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_capture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:padding="@dimen/margin_10dp"
                android:background="@drawable/fab_backgorund"
                android:src="@drawable/btn_camera" />

        </RelativeLayout>

        <include layout="@layout/view_common_footer" />

    </LinearLayout>
</layout>
