<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        style="@style/cs_common_match"
        android:background="@color/wf_login_background_color"
        android:orientation="vertical">


        <include layout="@layout/ac_header"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lst_tag"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        >

        <LinearLayout
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_uncheck_all"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_check_background"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_10dp"
                android:text="@string/fragment_tags_uncheck_all"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/btn_check_all"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_check_background"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/fragment_tags_check_all"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>
</layout>
