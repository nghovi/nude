<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        style="@style/cs_common_match"
        android:background="@color/wf_login_background_color"
        android:orientation="vertical">


        <include layout="@layout/ac_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dad9d9"
                android:padding="16dp"
                android:text="@string/ac_category_list"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <include layout="@layout/view_common_footer" />

    </LinearLayout>
</layout>
