<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:opencv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/chiase_black">

        <org.opencv.android.JavaCameraView
            android:id="@+id/show_camera_activity_java_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_capture"
            android:visibility="gone"
            opencv:camera_id="any"
            opencv:show_fps="true" />

        <ImageView
            android:id="@+id/btn_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/btn_capture"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/margin_20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#58000000">
            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_56dp"
                android:gravity="center"
                android:padding="@dimen/margin_16dp"
                android:layout_alignParentStart="true"
                android:text="@string/wf_cancel"
                android:textColor="@color/chiase_white"
                android:textSize="16sp"
                android:background="@drawable/row_pressed_selector"/>
            <ImageView
                android:id="@+id/btn_flash"
                android:layout_width="@dimen/margin_56dp"
                android:layout_height="@dimen/margin_56dp"
                android:src="@drawable/flash"
                android:padding="@dimen/margin_16dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/row_pressed_selector"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>