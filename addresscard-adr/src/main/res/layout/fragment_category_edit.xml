<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="category"
            type="trente.asia.addresscard.services.business.model.CategoryModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/ac_header"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ac_category"
                    android:textColor="@color/ac_common_text_color_body"
                    android:textSize="@dimen/ac_common_text_size_body"
                    android:background="@color/wf_app_color_base_30"
                    android:paddingTop="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_16dp"
                    android:paddingStart="@dimen/margin_8dp"
                    android:paddingEnd="@dimen/margin_8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ac_category_name"
                        android:textColor="@color/ac_common_text_color_title"
                        android:textSize="@dimen/ac_common_text_size_title"
                        android:padding="@dimen/margin_8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{category.categoryName}"
                        android:textSize="@dimen/ac_common_text_size_body"
                        android:textColor="@color/ac_common_text_color_body"
                        android:padding="@dimen/margin_8dp"/>
                </LinearLayout>
                <View style="@style/cs_common_divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ac_category_note"
                        android:padding="@dimen/margin_8dp"
                        android:textColor="@color/ac_common_text_color_title"
                        android:textSize="@dimen/ac_common_text_size_title"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{category.categoryNote}"
                        android:padding="@dimen/margin_8dp"
                        android:textSize="@dimen/ac_common_text_size_body"
                        android:textColor="@color/ac_common_text_color_body"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_16dp"
                    android:paddingBottom="@dimen/margin_16dp"
                    android:paddingStart="@dimen/margin_8dp"
                    android:paddingEnd="@dimen/margin_8dp"
                    android:background="@color/wf_app_color_base_30"
                    android:text="@string/ac_customer_list"
                    android:textColor="@color/ac_common_text_color_body"
                    android:textSize="@dimen/ac_common_text_size_body"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_customers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>