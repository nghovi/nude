<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wf_app_color_base"
            android:padding="@dimen/title_padding"
            android:text="@string/ac_set_customer_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ac_common_text_size_body"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ac_common_field_padding"
            android:text="@string/ac_new_customer_title"/>
        <LinearLayout
            android:id="@+id/lnr_new_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <trente.asia.android.view.ChiaseEditText
                android:id="@+id/edt_new_customer"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_edt_frame"/>
            <ImageView
                android:id="@+id/btn_new_customer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:src="@drawable/ac_action_add"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ac_common_field_padding"
            android:text="@string/ac_choose_customer_title"/>
        <View style="@style/cs_common_divider"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_customers"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </LinearLayout>
</layout>