<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017/04/21 10:25"
            style="@style/ac_btn_delete_customer_edit"/>
        <TextView
            android:id="@+id/user_title"
            android:layout_below="@+id/time_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ac_text_padding"
            style="@style/ac_body_text"
            android:background="@android:color/white"
            android:text="@string/ac_user"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_below="@+id/time_created"
            android:layout_toEndOf="@+id/user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ac_body_text"
            android:background="@android:color/white"
            android:padding="@dimen/ac_text_padding"
            android:gravity="end"
            android:text="User01"/>
        <View
            android:id="@+id/divider_0"
            android:layout_below="@+id/user_title"
            style="@style/cs_common_divider"/>
        <TextView
            android:id="@+id/note"
            android:layout_below="@+id/divider_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ac_text_padding"
            style="@style/ac_body_text"
            android:background="@android:color/white"
            android:text="asdfasjfalsf\najsflkasjfas\njasfjsdalkjf"/>
    </RelativeLayout>
</layout>