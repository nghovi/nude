<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/row_pressed_selector">
        <TextView
            android:id="@+id/category_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="AirlLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/customer_number"
            android:layout_toEndOf="@+id/category_name">
            <ImageView
                android:id="@+id/customer_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/test_thai_airline"/>

            <ImageView
                android:id="@+id/customer_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/test_thai_airline"/>
            <ImageView
                android:id="@+id/customer_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/test_thai_airline"/>
            <ImageView
                android:id="@+id/customer_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/test_thai_airline"/>
        </LinearLayout>

        <TextView
            android:id="@+id/customer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/arrow"
            android:textColor="@android:color/black"
            android:text="5"
            android:layout_centerVertical="true"
            android:drawablePadding="8dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/building"/>

        <ImageView
            android:id="@+id/arrow"
            style="@style/ac_icon_right"
            android:src="@drawable/ac_action_right"/>
        <View
            style="@style/cs_common_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</layout>