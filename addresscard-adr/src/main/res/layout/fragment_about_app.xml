<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="0dp">

    <include layout="@layout/view_common_header"/>

    <ScrollView
        style="@style/cs_common_match"
        android:layout_weight="1">

        <LinearLayout
            style="@style/cs_common_match"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin_80dp"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_16dp"
                android:src="@mipmap/ic_launcher"/>

            <!--<TextView-->
            <!--android:id="@+id/txt_fragment_about_version"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/margin_10dp"-->
            <!--android:text="Version 0.1" />-->
            <TextView
                android:id="@+id/txt_fragment_about_version"
                style="@style/cs_common_wrap"
                android:layout_gravity="center_horizontal"
                android:text="Version 0.1"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_16dp"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/webview_fragment_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/view_common_footer"/>

</LinearLayout>
