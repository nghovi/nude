<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wf_app_color_base"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/lnr_view_footer_card"
            style="@style/cs_common_wrap"
            android:layout_width="@dimen/margin_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <trente.asia.android.view.ChiaseImageView
                style="@style/cs_common_wrap"
                android:layout_marginTop="@dimen/margin_5dp"
                android:alpha="0.5"
                android:src="@drawable/ac_footer_business"/>

            <trente.asia.android.view.ChiaseTextView
                style="@style/cs_text_footer_item"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_5dp"
                android:text="@string/menu_card_title"
                android:textColor="@color/core_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_view_footer_company"
            style="@style/cs_common_wrap"
            android:layout_width="@dimen/margin_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <trente.asia.android.view.ChiaseImageView
                style="@style/cs_common_wrap"
                android:layout_marginTop="@dimen/margin_5dp"
                android:alpha="0.5"
                android:src="@drawable/ac_footer_shop"/>

            <trente.asia.android.view.ChiaseTextView
                style="@style/cs_text_footer_item"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_5dp"
                android:text="@string/menu_company_title"
                android:textColor="@color/core_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_view_footer_setting"
            style="@style/cs_common_wrap"
            android:layout_width="@dimen/margin_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <trente.asia.android.view.ChiaseImageView
                style="@style/cs_common_wrap"
                android:layout_marginTop="@dimen/margin_5dp"
                android:alpha="0.5"
                android:src="@drawable/ac_footer_setting"/>

            <trente.asia.android.view.ChiaseTextView
                style="@style/cs_text_footer_item"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_5dp"
                android:text="@string/menu_setting_title"
                android:textColor="@color/core_gray"/>
        </LinearLayout>
    </LinearLayout>

</merge>