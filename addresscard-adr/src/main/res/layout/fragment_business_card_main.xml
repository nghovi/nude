<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        style="@style/cs_common_match"
        android:background="@color/wf_login_background_color"
        android:orientation="vertical">


        <include layout="@layout/view_common_header" />

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/row_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_height"
                android:background="@drawable/row_pressed_selector">

                <TextView
                    android:id="@+id/text_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/general_margin"
                    android:text="Category"
                    android:textSize="@dimen/text_size"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/arrow_category"
                    android:text="All"
                    android:textSize="@dimen/text_size"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/arrow_category"
                    android:layout_width="@dimen/right_arrow_dimension"
                    android:layout_height="@dimen/right_arrow_dimension"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/general_margin"
                    android:layout_marginStart="@dimen/general_margin"
                    android:layout_centerVertical="true"
                    android:src="@drawable/wf_row_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/cs_common_divider"
                android:id="@+id/divider"
                android:layout_below="@+id/row_category"/>

            <RelativeLayout
                android:id="@+id/row_customer"
                android:layout_below="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_height"
                android:background="@drawable/row_pressed_selector">

                <TextView
                    android:id="@+id/text_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/general_margin"
                    android:text="Customer"
                    android:textSize="@dimen/text_size"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/arrow_group"
                    android:text="All"
                    android:textSize="@dimen/text_size"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/arrow_group"
                    android:layout_width="@dimen/right_arrow_dimension"
                    android:layout_height="@dimen/right_arrow_dimension"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/general_margin"
                    android:layout_marginStart="@dimen/general_margin"
                    android:layout_centerVertical="true"
                    android:src="@drawable/wf_row_arrow_right" />
            </RelativeLayout>

            <TextView
                android:id="@+id/list_card_title"
                android:layout_below="@+id/row_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_background"
                android:padding="@dimen/title_padding"
                android:text="Latest card list"
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/black"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_cards"
                android:layout_below="@+id/list_card_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/btn_capture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:layout_marginEnd="@dimen/general_margin"
                android:layout_marginBottom="@dimen/general_margin"
                android:background="@drawable/fab_backgorund"
                android:src="@drawable/btn_camera"/>
            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_delete_background"
                android:text="Delete"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:visibility="gone" />
        </RelativeLayout>

        <include layout="@layout/view_common_footer" />

    </LinearLayout>
</layout>
