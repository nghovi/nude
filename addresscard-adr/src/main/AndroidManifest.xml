<?xml version="1.0" encoding="utf-8"?>
<manifest package="trente.asia.addresscard"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
                 android:label="@string/app_name"
                 android:resizeableActivity="false"
                 android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity
            android:name="trente.asia.addresscard.commons.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="trente.asia.addresscard.commons.activities.AddressCardActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".commons.activities.CameraPhotoPreviewAccountActivity"/>
    </application>

</manifest>