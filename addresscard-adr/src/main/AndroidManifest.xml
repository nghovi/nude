<?xml version="1.0" encoding="utf-8"?>
<manifest package="trente.asia.addresscard"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <supports-screens android:resizeable="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"/>
    <uses-feature android:name="android.hardware.camera2" android:required="true"/>
    <uses-feature android:name="android.hardware.camera2.autofocus" android:required="true"/>
    <uses-feature android:name="android.hardware.camera2.front" android:required="true"/>
    <uses-feature android:name="android.hardware.camera2.front.autofocus" android:required="true"/>

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
                 android:label="@string/app_name"
                 android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity
            android:name="trente.asia.addresscard.commons.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="trente.asia.addresscard.commons.activities.AddressCardActivity"
            android:windowSoftInputMode="adjustUnspecified"/>
        <activity android:name=".commons.activities.CameraPhotoPreviewAccountActivity"/>
        <activity android:name=".commons.activities.CameraActivity"
            android:theme="@style/ThemeNoActionBar"/>
    </application>

</manifest>