<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1">

        <trente.asia.android.view.ChiaseImageViewRatioWidth
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_80dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/txt_fragment_about_version"
            style="@style/cs_common_wrap"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Version 0.1"/>

        <LinearLayout
            style="@style/cs_common_match"
            android:layout_marginTop="@dimen/margin_16dp"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview_fragment_about"
                style="@style/cs_common_match"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
