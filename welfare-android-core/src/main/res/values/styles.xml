<resources>

    <style name="wf_common_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/wf_login_background_color</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="wl_common_button_10" parent="@style/cs_common_match_wrap">
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
        <item name="android:background">@drawable/common_welfare_button</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="wl_common_button_60" parent="@style/cs_common_match_wrap">
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_60dp</item>
        <item name="android:layout_marginRight">@dimen/margin_60dp</item>
        <item name="android:background">@drawable/common_welfare_button</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="wl_common_button_small">
        <item name="android:layout_width">@dimen/margin_150dp</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:background">@drawable/common_welfare_button</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="wl_common_button_login">
        <item name="android:layout_width">@dimen/margin_150dp</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:background">@drawable/common_welfare_login_button</item>
        <item name="android:textColor">@color/chiase_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="wl_common_text" parent="@style/cs_common_match_wrap">
        <item name="android:textColor">@color/wf_common_color_text</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
    </style>

    <style name="wl_common_text_single_line" parent="@style/wl_common_text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="wl_common_edit_text" parent="@style/wl_common_text">
        <item name="android:background">@drawable/shape_gray_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/wf_common_color_hint</item>
    </style>

    <style name="wl_common_edit_text2" parent="@style/wl_common_text">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">right</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/wf_common_color_hint</item>
    </style>

    <style name="wl_common_edit_text_multi_line" parent="cs_common_match_wrap">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
        <item name="android:lines">5</item>
        <item name="android:textColor">@color/wf_common_color_text</item>
        <item name="android:textColorHint">@color/wf_common_color_hint</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:paddingLeft">@dimen/margin_16dp</item>
        <item name="android:paddingRight">@dimen/margin_16dp</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
    </style>

    <style name="wl_common_edit_text_multi_line2" parent="cs_common_match_wrap">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">5</item>
        <item name="android:textColor">@color/wf_common_color_text</item>
        <item name="android:textColorHint">@color/wf_common_color_hint</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
    </style>

    <style name="wl_common_text2" parent="@style/cs_common_match_wrap">
        <item name="android:textColor">@color/wf_common_color_text</item>
        <item name="android:textSize">@dimen/margin_14dp</item>
    </style>

    <style name="wl_common_text_hint" parent="@style/cs_common_match_wrap">
        <item name="android:textColor">@color/wf_common_color_hint</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
    </style>

    <style name="wf_common_linear" parent="@style/cs_common_match_wrap">
        <item name="android:paddingTop">@dimen/margin_16dp</item>
        <item name="android:paddingBottom">@dimen/margin_16dp</item>
        <item name="android:paddingLeft">@dimen/margin_16dp</item>
        <item name="android:paddingRight">@dimen/margin_16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wf_common_item_linear" parent="@style/cs_common_match_wrap">
        <item name="android:paddingTop">@dimen/margin_10dp</item>
        <item name="android:paddingBottom">@dimen/margin_10dp</item>
        <item name="android:paddingLeft">@dimen/margin_16dp</item>
        <item name="android:paddingRight">@dimen/margin_16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wf_common_item_linear2" parent="@style/wf_common_item_linear">
        <item name="android:background">@color/chiase_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wf_common_switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/wf_app_color_base</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">@color/chiase_gray</item>
    </style>
</resources>
