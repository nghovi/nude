<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/wf_margin_16"
        android:paddingLeft="@dimen/wf_margin_16"
        android:paddingRight="@dimen/wf_margin_16"
        android:paddingTop="@dimen/wf_margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/spn_id_type"
                    layout="@layout/view_wf_spinner"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">

                <include
                    android:id="@+id/spn_id_service_name"
                    layout="@layout/view_wf_spinner"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@color/wf_app_color_base"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5dp">

            <TextView
                style="@style/wl_common_text"
                android:text="@string/wf_contact_us_detail_content_title"
                android:textColor="@color/chiase_white"/>
        </LinearLayout>

        <LinearLayout
            style="@style/cs_common_match_wrap"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_20dp"
            android:background="@color/wf_app_edit_text">

            <EditText
                android:id="@+id/edt_id_content"
                style="@style/wl_common_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="top"/>

            <TextView
                android:id="@+id/txt_id_content_number"
                style="@style/wl_common_text"
                android:gravity="right"
                android:text="200"/>

            <View style="@style/cs_common_divider"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_id_send"
            style="@style/wl_common_button_small"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/wf_margin_16"
            android:text="@string/wf_common_send"/>

    </LinearLayout>

</merge>