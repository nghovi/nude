<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="240dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_normal_white"
              android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="vertical"
        android:padding="@dimen/margin_24dp">

        <TextView
            android:id="@+id/txt_id_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_42dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:padding="@dimen/margin_8dp">

        <TextView
            android:id="@+id/txt_id_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chiase_common_cancel"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/chiase_green2"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/txt_id_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chiase_common_ok"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/chiase_green2"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</LinearLayout>
