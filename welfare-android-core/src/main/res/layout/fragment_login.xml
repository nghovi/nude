<LinearLayout style="@style/wf_common_match"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/margin_32dp"
              android:paddingRight="@dimen/margin_32dp">

    <trente.asia.android.view.ChiaseImageViewRatioWidth
        android:id="@+id/img_id_logo"
        style="@style/cs_common_match_wrap"/>

    <LinearLayout
        android:id="@+id/lnr_id_signin"
        style="@style/cs_common_match_wrap"
        android:orientation="vertical">

        <trente.asia.android.view.ChiaseEditText
            android:id="@+id/edt_username"
            style="@style/wl_common_edit_text"
            android:layout_marginTop="@dimen/margin_100dp"
            android:hint="@string/wf_common_signin_user_id"
            android:inputType="textEmailAddress"
            custom:mName="account"/>

        <trente.asia.android.view.ChiaseEditText
            android:id="@+id/edt_password"
            style="@style/wl_common_edit_text"
            android:hint="@string/wf_common_signin_password"
            android:inputType="textPassword"
            custom:mName="password"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chk_id_remember"
        style="@style/wl_common_text2"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/wf_sign_in_remember"/>

    <Button
        android:id="@+id/btn_signIn"
        style="@style/wl_common_button_login"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/wlf_sign_in"/>

    <TextView
        android:id="@+id/txt_forget_password"
        style="@style/wl_common_text2"
        android:layout_marginTop="@dimen/margin_16dp"
        android:gravity="center"
        android:text="@string/wf_forget_password"/>

</LinearLayout>
