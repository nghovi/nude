<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_normal_white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp">

    <TextView
        android:id="@+id/txt_dialog_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/txt_dialog_notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_64dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/btn_dialog_notice_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/chiase_common_ok"
        android:textColor="@color/chiase_green2" />
</LinearLayout>
