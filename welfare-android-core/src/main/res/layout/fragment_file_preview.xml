<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cs_common_match"
    android:background="@color/chiase_white"
    android:orientation="vertical">

    <include layout="@layout/view_common_header"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/shape_attach_background"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_20dp"
        android:paddingBottom="@dimen/margin_20dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp">

        <ImageView
            style="@style/cs_common_wrap"
            android:src="@drawable/wf_file"/>

        <TextView
            android:id="@+id/txt_id_file_name"
            style="@style/wl_common_text"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/chiase_white"
            />
    </LinearLayout>

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnr_id_cancel"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:background="@drawable/state_common_selectable_row"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp">

            <TextView
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:text="@string/chiase_common_cancel"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_id_ok"
            style="@style/cs_common_wrap"
            android:layout_weight="1"
            android:background="@drawable/state_common_selectable_row"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp">

            <TextView
                style="@style/wl_common_text"
                android:layout_width="wrap_content"
                android:text="@string/chiase_common_ok"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
