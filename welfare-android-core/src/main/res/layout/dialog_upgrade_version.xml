<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/margin_280dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_normal_white"
              android:orientation="vertical">

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:background="@drawable/shape_common_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16dp">

        <TextView
            style="@style/wl_common_text"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wf_upgrade_version_title"
            android:textColor="@color/chiase_white"/>
    </LinearLayout>

    <View style="@style/cs_common_divider"/>

    <LinearLayout
        style="@style/cs_common_match_wrap"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnr_id_ok"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/state_common_selectable_row"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp">

            <TextView
                style="@style/cs_common_wrap"
                android:text="@string/chiase_common_ok"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_id_cancel"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/state_common_selectable_row"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp">

            <TextView
                style="@style/cs_common_wrap"
                android:text="@string/chiase_common_cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>