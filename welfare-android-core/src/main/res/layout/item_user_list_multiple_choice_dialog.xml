<?xml version="1.0" encoding="utf-8"?>
<nguyenhoangviet.vpcorp.android.view.layout.CheckableLinearLayout style="@style/cs_common_match_wrap"
                                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:background="@drawable/state_common_selectable_row2"
                                                       android:gravity="center_vertical"
                                                       android:orientation="horizontal"
                                                       android:paddingBottom="@dimen/margin_10dp"
                                                       android:paddingLeft="@dimen/margin_16dp"
                                                       android:paddingRight="@dimen/margin_16dp"
                                                       android:paddingTop="@dimen/margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <nguyenhoangviet.vpcorp.welfare.adr.view.SelectableRoundedImageView
            android:id="@+id/img_user_list_multiple_choice_dialog"
            android:layout_width="@dimen/margin_32dp"
            android:layout_height="@dimen/margin_32dp"
            />

        <TextView
            android:id="@+id/txt_item_value"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/margin_12dp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_checked"
        android:layout_width="@dimen/margin_32dp"
        android:layout_height="@dimen/margin_32dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:visibility="gone"
        android:src="@drawable/cs_row_check"/>
</nguyenhoangviet.vpcorp.android.view.layout.CheckableLinearLayout>